{% comment %}
  Related Product Card
  Simple product card for related products section
  Usage: {% render 'related-product-card', product: product %}
{% endcomment %}

<div class='bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300'>
  <!-- Product Image -->
  <a
    href='{{ product.url }}'
    class='aspect-square bg-gray-50 rounded-t-lg overflow-hidden block hover:cursor-pointer'
  >
    <img
      src='{{ product.featured_image | image_url: width: 400, height: 400 }}'
      alt='{{ product.title | escape }}'
      class='w-full h-full object-contain'
      loading='lazy'
      width='400'
      height='400'
    >
  </a>

  <!-- Product Info -->
  <div class='p-4'>
    <!-- Product Name -->
    <h3 class='text-lg font-bold text-black mb-2 text-center'>
      {{ product.title | upcase }}
    </h3>

    <!-- Price -->
    <div class='text-center mb-4'>
      <span class='text-xl font-bold text-black'>
        {{ product.price | money }}
      </span>
    </div>

    <!-- Add to Cart Button -->
    <button
      onclick="window.location.href='{{ product.url }}'"
      class='w-full bg-black hover:bg-gray-800 text-white font-bold py-3 px-4 rounded-md transition-all duration-200 transform hover:scale-[1.02] active:scale-[0.98]'
    >
      ADD TO CART
    </button>
  </div>
</div>
