<!doctype html>
<html>
  <head>
    <title>{{ page_title }}</title>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1'>
    <meta name='description' content='{{ page_description | escape }}'>
    <link rel='canonical' href='{{ canonical_url }}'>
    <!-- Flowbite CDN -->
    <link
      href='https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.css'
      rel='stylesheet'
    >
    <meta
      name='viewport'
      content='width=device-width,initial-scale=1,shrink-to-fit=no'
    >
    {{ content_for_header }}
    <!-- Header hook for plugins -->
    {%- comment -%} {{ "application.css" | asset_url | stylesheet_tag }} {%- endcomment -%}
    <script src='{{ application.js | asset_url }}' defer></script>
    <script
      defer
      src='https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js'
    ></script>

    <style type='text/tailwindcss'>
      @theme {
        --breakpoint-sm: 640px;
        --breakpoint-md: 768px;
        --breakpoint-lg: 1100px; /* start above 1024px */
        --breakpoint-xl: 1280px;
        --breakpoint-2xl: 1536px;
      }
    </style>
    <script
      src='https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4'
      defer
    ></script>

    <!-- Swiper JS -->
    <script
      src='https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js'
      defer
    ></script>

    <style>
      [x-cloak] {
        display: none;
      }
      html,
      body {
        height: 100%;
      }
      body {
        margin: 0;
        display: flex;
        min-height: 100vh;
        flex-direction: column;
      }
      :root {
        --header-height: 64px;
      }
      main[role='main'] {
        flex: 1 0 auto;
      }
    </style>
  </head>
  <body class='min-h-screen flex flex-col'>
    {% section "header" %}
    <main
      role='main'
      class='flex-1'
      style='padding-top: var(--header-height, 64px);'
    >
      {{ content_for_layout }}
    </main>

    <!-- Cart Sheet -->
    {% render "cart-sheet" %}

    <!-- Search Sheet -->
    {% render "search-sheet" %}

    {% section "footer" %}

    {% render "mw_PO_objects" %}

    <!-- Flowbite CDN -->
    <script
      src='https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js'
      defer
    ></script>
  </body>
</html>
