{% schema %}
{
  "name": "About Us Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "header_image",
      "label": "Header Image"
    },
    {
      "type": "text",
      "id": "header_alt",
      "label": "Header Image Alt Text",
      "default": "About Us"
    },
    {
      "type": "header",
      "content": "Header Image Settings"
    },
    {
      "type": "select",
      "id": "header_height",
      "label": "Header Image Height",
      "options": [
        {
          "value": "small",
          "label": "Small (200px)"
        },
        {
          "value": "medium",
          "label": "Medium (400px)"
        },
        {
          "value": "large",
          "label": "Large (600px)"
        }
      ],
      "default": "medium"
    },
    {
      "type": "select",
      "id": "header_position",
      "label": "Image Position",
      "options": [
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        }
      ],
      "default": "center"
    }
  ],
  "presets": [
    {
      "name": "About Us"
    }
  ]
}
{% endschema %}

<!-- Header Section -->
{% if section.settings.header_image
  and section.settings.header_image != blank
%}
  <!-- Custom Header Image -->
  <div class='relative w-full overflow-hidden'>
    {% assign header_height = section.settings.header_height %}
    {% case header_height %}
      {% when "small" %}
        {% assign height_class = "h-48 md:h-64" %}
      {% when "medium" %}
        {% assign height_class = "h-64 md:h-96" %}
      {% when "large" %}
        {% assign height_class = "h-96 md:h-[600px]" %}
    {% endcase %}

    {% assign position_class = section.settings.header_position %}
    {% case position_class %}
      {% when "center" %}
        {% assign object_position = "object-center" %}
      {% when "top" %}
        {% assign object_position = "object-top" %}
      {% when "bottom" %}
        {% assign object_position = "object-bottom" %}
    {% endcase %}

    <div class='{{ height_class }} w-full'>
      <img
        src='{{ section.settings.header_image | image_url: width: 1920 }}'
        alt='{{ section.settings.header_alt | escape }}'
        class='w-full h-full object-cover {{ object_position }}'
        loading='eager'
      >
    </div>

    <!-- Optional overlay for text if needed -->
    <div class='absolute inset-0 bg-black/20'></div>
  </div>
{% else %}
  <!-- Default Header Section (like template-page.liquid) -->
  <div class='bg-gray-50 min-h-screen'>
    <header class='bg-black text-white py-16 relative overflow-hidden md:h-96'>
      <div class='absolute inset-0 bg-black opacity-10'></div>
      <div class='container mx-auto px-4 relative z-10 h-full flex flex-col items-center justify-center'>
        <div class='text-center'>
          <h1 class='text-5xl font-bold mb-4 text-white'>{{ page.title }}</h1>
          {% if page.excerpt != blank %}
            <p class='text-xl opacity-90 max-w-2xl mx-auto leading-relaxed'>
              {{ page.excerpt }}
            </p>
          {% endif %}
        </div>
      </div>
      <div
        class='absolute bottom-0 left-0 right-0 h-8 bg-gradient-to-r from-transparent via-white to-transparent opacity-20'
      ></div>
    </header>
{% endif %}

<!-- Page Content Section -->
{% if section.settings.header_image
  and section.settings.header_image != blank
%}
  <!-- Content with custom header image -->
  <div class='max-w-4xl mx-auto px-4 py-12 md:py-16'>
    <div class='prose prose-lg max-w-none prose-headings:font-bold prose-headings:text-gray-900 prose-p:text-gray-700 prose-p:leading-relaxed prose-p:mb-6 prose-h1:text-3xl prose-h1:mb-8 prose-h2:text-2xl prose-h2:mb-6 prose-h2:mt-8 prose-h3:text-xl prose-h3:mb-4 prose-h3:mt-6'>
      {{ page.content }}
    </div>
  </div>
{% else %}
  <!-- Content with default header -->
  <div class='container mx-auto px-4 py-16'>
    <div class='max-w-4xl mx-auto'>
      <div class='bg-white p-8 md:p-12'>
        <div class='prose prose-lg max-w-none prose-headings:font-bold prose-headings:text-gray-900 prose-headings:mb-6 prose-p:text-gray-700 prose-p:leading-relaxed prose-p:mb-6 prose-h1:text-3xl prose-h1:mb-8 prose-h2:text-2xl prose-h2:mb-6 prose-h2:mt-8 prose-h3:text-xl prose-h3:mb-4 prose-h3:mt-6 prose-ul:text-gray-700 prose-ol:text-gray-700 prose-li:text-gray-700 prose-a:text-black prose-a:font-medium prose-a:underline prose-a:decoration-2 prose-a:underline-offset-2 prose-strong:text-gray-900 prose-strong:font-semibold prose-blockquote:text-gray-600 prose-blockquote:border-l-4 prose-blockquote:border-gray-300 prose-blockquote:pl-6 prose-blockquote:italic prose-code:text-gray-800 prose-code:bg-gray-100 prose-code:px-2 prose-code:py-1 prose-code:rounded prose-pre:bg-gray-100 prose-pre:border prose-pre:border-gray-200 prose-pre:rounded-lg prose-pre:p-4 prose-table:text-sm prose-th:bg-gray-50 prose-th:font-semibold prose-th:text-gray-900 prose-td:border prose-td:border-gray-200 prose-td:px-4 prose-td:py-2'>
          {{ page.content }}
        </div>
      </div>
    </div>
  </div>
  </div>
{% endif %}
