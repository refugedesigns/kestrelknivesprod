{% schema %}
{
  "name": "Media Gallery",
  "settings": [
    {
      "type": "header",
      "content": "Hero Section"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "hero_alt",
      "label": "Hero Image Alt Text",
      "default": "Hero image"
    },
    {
      "type": "range",
      "id": "hero_scale",
      "label": "Hero Image Scale",
      "min": 50,
      "max": 150,
      "step": 5,
      "unit": "%",
      "default": 100
    },
    {
      "type": "range",
      "id": "hero_padding_top",
      "label": "Hero Image Top Spacing",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 80
    },
    {
      "type": "header",
      "content": "Social Media Links"
    },
    {
      "type": "url",
      "id": "youtube_url",
      "label": "YouTube URL"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "email_url",
      "label": "Email URL"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "twitter_url",
      "label": "Twitter URL"
    },
    {
      "type": "header",
      "content": "Gallery Settings"
    },
    {
      "type": "text",
      "id": "gallery_title",
      "label": "Gallery Title",
      "default": "Gallery"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "label": "Columns on Desktop",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "columns_tablet",
      "label": "Columns on Tablet",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "columns_mobile",
      "label": "Columns on Mobile",
      "min": 1,
      "max": 3,
      "step": 1,
      "default": 2
    },
    {
      "type": "checkbox",
      "id": "show_captions",
      "label": "Show image captions",
      "default": false
    },
    {
      "type": "range",
      "id": "gallery_scale",
      "label": "Gallery Image Scale",
      "min": 50,
      "max": 150,
      "step": 5,
      "unit": "%",
      "default": 100
    }
  ],
  "blocks": [
    {
      "type": "media_image",
      "name": "Media Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Caption"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link (optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Media Gallery",
      "blocks": [
        {
          "type": "media_image"
        },
        {
          "type": "media_image"
        },
        {
          "type": "media_image"
        },
        {
          "type": "media_image"
        }
      ]
    }
  ]
}
{% endschema %}

<!-- Hero Section -->
{% if section.settings.hero_image %}
  <div
    class='relative max-w-8xl mx-auto px-2 md:px-0'
    style='padding-top: {{ section.settings.hero_padding_top }}px;'
  >
    <img
      src='{{ section.settings.hero_image | image_url: width: 2000 }}'
      alt='{{ section.settings.hero_alt | escape }}'
      class='w-full h-full object-fit'
      style='transform: scale({{ section.settings.hero_scale | divided_by: 100.0 }}); transform-origin: center;'
    >
  </div>
{% endif %}

