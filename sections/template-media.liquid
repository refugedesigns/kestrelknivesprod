      "default": "cover"
    },
    {
      "type": "select",
      "id": "hero_image_fit_mobile",
      "label": "Hero image fit - Mobile",
      "options": [
        { "value": "cover", "label": "Cover" },
        { "value": "contain", "label": "Contain" },
        { "value": "fill", "label": "Fill" },
        { "value": "scale-down", "label": "Scale Down" },
        { "value": "none", "label": "None" }
      ]
    },
    {
      "type": "select",
      "id": "hero_image_fit_tablet",
      "label": "Hero image fit - Tablet",
      "options": [
        { "value": "cover", "label": "Cover" },
        { "value": "contain", "label": "Contain" },
        { "value": "fill", "label": "Fill" },
        { "value": "scale-down", "label": "Scale Down" },
        { "value": "none", "label": "None" }
      ]
    },
    {
      "type": "select",
      "id": "hero_image_fit_desktop",
      "label": "Hero image fit - Desktop",
      "options": [
        { "value": "cover", "label": "Cover" },
        { "value": "contain", "label": "Contain" },
        { "value": "fill", "label": "Fill" },
        { "value": "scale-down", "label": "Scale Down" },
        { "value": "none", "label": "None" }
      ]
    },
    {
      "type": "select",
      "id": "hero_image_position",
      "label": "Hero image position [fallback]",
      "options": [
        { "value": "top", "label": "Top" },
        { "value": "center", "label": "Center" },
        { "value": "bottom", "label": "Bottom" }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "hero_image_position_mobile",
      "label": "Hero image position - Mobile",
      "options": [
        { "value": "top", "label": "Top" },
        { "value": "center", "label": "Center" },
        { "value": "bottom", "label": "Bottom" }
      ]
    },
    {
      "type": "select",
      "id": "hero_image_position_tablet",
      "label": "Hero image position - Tablet",
      "options": [
        { "value": "top", "label": "Top" },
        { "value": "center", "label": "Center" },
        { "value": "bottom", "label": "Bottom" }
      ]
    },
    {
      "type": "select",
      "id": "hero_image_position_desktop",
      "label": "Hero image position - Desktop",
      "options": [
        { "value": "top", "label": "Top" },
        { "value": "center", "label": "Center" },
        { "value": "bottom", "label": "Bottom" }
