  "presets": [
    {
      "name": "Media Gallery",
      "blocks": [
        {
          "type": "media_image"
        },
        {
          "type": "media_image"
        },
        {
          "type": "media_image"
        },
        {
          "type": "media_image"
        }
      ]
    }
  ]
}
{% endschema %}

{% liquid
  assign hero_image_desktop = section.settings.hero_image_desktop
  assign hero_image_tablet = section.settings.hero_image_tablet
  assign hero_image_mobile = section.settings.hero_image_mobile

  assign hero_aspect_desktop = section.settings.hero_aspect_ratio_desktop | default: "1.7778"
  assign hero_aspect_tablet = section.settings.hero_aspect_ratio_tablet
  if hero_aspect_tablet == blank
    assign hero_aspect_tablet = hero_aspect_desktop
  endif
  assign hero_aspect_mobile = section.settings.hero_aspect_ratio_mobile
  if hero_aspect_mobile == blank
    assign hero_aspect_mobile = hero_aspect_tablet
  endif

  assign hero_base_image = hero_image_desktop
  if hero_base_image == blank
    assign hero_base_image = hero_image_tablet
  endif
  if hero_base_image == blank
    assign hero_base_image = hero_image_mobile
  endif
%}

<style>
  .media-hero-media {
    width: 100%;
    max-height: var(--media-hero-max-height-desktop, none);
    aspect-ratio: var(--media-hero-aspect-desktop, 1.7778);
    display: block;
    position: relative;
    overflow: hidden;
    border-radius: 0;
  }
  .media-hero-media picture {
    display: block;
    width: 100%;
    height: 100%;
  }
  .media-hero-media img {
    width: 100%;
    height: 100%;
    display: block;
    transform-origin: center center;
    object-fit: {{ section.settings.hero_image_fit_desktop | default: section.settings.hero_image_fit | default: "cover" }};
    object-position: {{ section.settings.hero_image_position_desktop | default: section.settings.hero_image_position | default: "center" }};
  }
  .media-hero-media.media-hero-media--contain img {
    object-fit: contain !important;
  }

  @media (max-width: 1024px) {
    .media-hero-media {
      aspect-ratio: var(
        --media-hero-aspect-tablet,
        var(--media-hero-aspect-desktop, 1.7778)
      );
    }

    .media-hero-media img {
      object-fit: {{ section.settings.hero_image_fit_tablet | default: section.settings.hero_image_fit | default: "cover" }};
      object-position: {{ section.settings.hero_image_position_tablet | default: section.settings.hero_image_position | default: "center" }};
    }
  }

  @media (max-width: 768px) {
    .media-hero-media {
      height: var(--media-hero-height-mobile, 420px);
      aspect-ratio: auto;
    }

    .media-hero-media img {
      object-fit: {{ section.settings.hero_image_fit_mobile | default: section.settings.hero_image_fit | default: "cover" }};
      object-position: {{ section.settings.hero_image_position_mobile | default: section.settings.hero_image_position | default: "center" }};
    }
  }
</style>

<!-- Hero Section -->
{% if hero_base_image %}
  <div
    class='relative hover:cursor-pointer overflow-hidden'
    style='padding-top: {{ section.settings.hero_padding_top }}px; width: 100vw; margin-left: 50%; transform: translateX(-50%);'
  >
    {% if section.settings.hero_link != blank %}
      <a href='{{ section.settings.hero_link }}' class='block'>
    {% endif %}

    <div
      class='media-hero-media media-hero-media--contain'
      style='--media-hero-aspect-desktop: {{ hero_aspect_desktop }}; --media-hero-aspect-tablet: {{ hero_aspect_tablet }}; --media-hero-aspect-mobile: {{ hero_aspect_mobile }}; --media-hero-height-mobile: {{ section.settings.hero_height_mobile_px | default: 420 }}px; --media-hero-max-height-desktop: {{ section.settings.hero_max_height_desktop_px | default: 800 }}px;'
    >
      <picture class='w-full h-full block'>
        {% if hero_image_mobile %}
          <source
            srcset='{{ hero_image_mobile | image_url: width: 1200 }}'
            media='(max-width: 767px)'
          >
        {% endif %}
        {% if hero_image_tablet %}
          <source
            srcset='{{ hero_image_tablet | image_url: width: 1600 }}'
            media='(max-width: 1024px)'
          >
        {% endif %}
        <img
          src='{{ hero_base_image | image_url: width: 2000 }}'
          alt='{{ section.settings.hero_alt | escape }}'
          class='w-full h-full {% if section.settings.hero_link != blank %}cursor-pointer transition-transform duration-300 hover:scale-[1.02]{% endif %}'
          width='{{ hero_base_image.width }}'
          height='{{ hero_base_image.height }}'
          style='transform: scale({{ section.settings.hero_image_zoom | default: 100 | divided_by: 100.0 }});'
          loading='lazy'
        >
      </picture>
    </div>

    {% if section.settings.hero_link != blank %}
      </a>
    {% endif %}
  </div>
{% endif %}

