{% schema %}
{
  "name": "Media Gallery",
  "settings": [
    {
      "type": "header",
      "content": "Hero Section"
    },
    {
      "type": "image_picker",
      "id": "hero_image_desktop",
      "label": "Hero Image - Desktop"
    },
    {
      "type": "image_picker",
      "id": "hero_image_tablet",
      "label": "Hero Image - Tablet (≤1024px)",
      "info": "Optional override used on tablet viewports."
    },
    {
      "type": "image_picker",
      "id": "hero_image_mobile",
      "label": "Hero Image - Mobile (≤768px)",
      "info": "Optional override used on mobile viewports."
    },
    {
      "type": "text",
      "id": "hero_alt",
      "label": "Hero Image Alt Text",
      "default": "Hero image"
    },
    {
      "type": "range",
      "id": "hero_padding_top",
      "label": "Hero Image Top Spacing",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 80
    },
    {
      "type": "range",
      "id": "hero_height_mobile_px",
      "label": "Hero height - Mobile (px)",
      "min": 160,
      "max": 900,
      "step": 20,
      "default": 420
    },
    {
      "type": "range",
      "id": "hero_max_height_desktop_px",
      "label": "Hero max height - Desktop (px)",
      "min": 300,
      "max": 1400,
      "step": 20,
      "default": 800
    },
    {
      "type": "url",
      "id": "hero_link",
      "label": "Hero Image Link"
    },
    {
      "type": "header",
      "content": "Hero Image Aspect Ratios"
    },
    {
      "type": "text",
      "id": "hero_aspect_ratio_desktop",
      "label": "Hero aspect ratio - Desktop",
      "default": "1.7778",
      "info": "Width / height, e.g. 1.7778 for 16:9."
    },
    {
      "type": "text",
      "id": "hero_aspect_ratio_tablet",
      "label": "Hero aspect ratio - Tablet",
