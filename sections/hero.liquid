<!-- Swiper Styles -->
<style>
  .hero-swiper {
    width: 100%;
    height: var(--hero-height-px, 600px);
    border-radius: var(--hero-radius, 0px);
    overflow: hidden;
  }

  .hero-scale-wrap {
    width: 100%;
    height: var(--hero-height-px, 600px);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    border-radius: var(--hero-radius, 0px);
  }

  /* Desktop: apply simple scale */
  .hero-scale-wrap .hero-swiper {
    transform: scale(calc(var(--hero-scale, 100) / 100));
    transform-origin: center center;
  }

  /* Ensure slides fill container and images cover */
  .hero-swiper swiper-slide {
    height: 100%;
    overflow: hidden;
  }
  .hero-swiper swiper-slide img {
    border-radius: var(--hero-radius, 0px);
    transform-origin: center center;
  }

  /* Inline text background overlay block */
  .kk-text-wrap {
    position: relative;
  }
  .kk-text-bg {
    position: absolute;
    inset: -0.5rem; /* small padding around text */
    border-radius: 0.5rem;
    z-index: -1;
  }
  .kk-text-content {
    position: relative;
    z-index: 1;
  }

  /* On mobile keep scaling and compensate dimensions */
  @media (max-width: 768px) {
    .hero-swiper,
    .hero-scale-wrap {
      height: var(--hero-height-mobile-px, var(--hero-height-px, 600px));
    }
    .hero-scale-wrap .hero-swiper {
      width: calc(100% * var(--hero-scale-inv, 1));
      height: calc(100% * var(--hero-scale-inv, 1));
      transform: scale(calc(var(--hero-scale, 100) / 100));
    }
  }

  .hero-swiper swiper-slide {
    text-align: center;
    font-size: 18px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hero-swiper swiper-slide img {
    display: block;
    width: 100%;
    height: 100%;
  }

  /* Per-slide responsive object-fit and object-position */
  /* Desktop/base */
  .hero-root .slide-1 img {
    object-fit: {{ section.settings.slide_1_image_fit_desktop | default: section.settings.slide_1_image_fit | default: "cover" }};
    object-position: {{ section.settings.slide_1_image_position_desktop | default: section.settings.slide_1_image_position | default: "center" }};
  }
  .hero-root .slide-2 img {
    object-fit: {{ section.settings.slide_2_image_fit_desktop | default: section.settings.slide_2_image_fit | default: "cover" }};
    object-position: {{ section.settings.slide_2_image_position_desktop | default: section.settings.slide_2_image_position | default: "center" }};
  }
  .hero-root .slide-3 img {
    object-fit: {{ section.settings.slide_3_image_fit_desktop | default: section.settings.slide_3_image_fit | default: "cover" }};
    object-position: {{ section.settings.slide_3_image_position_desktop | default: section.settings.slide_3_image_position | default: "center" }};
  }

  /* Tablet overrides */
  @media (max-width: 1024px) {
    .hero-root .slide-1 img {
      object-fit: {{ section.settings.slide_1_image_fit_tablet | default: section.settings.slide_1_image_fit | default: "cover" }};
      object-position: {{ section.settings.slide_1_image_position_tablet | default: section.settings.slide_1_image_position | default: "center" }};
    }
    .hero-root .slide-2 img {
      object-fit: {{ section.settings.slide_2_image_fit_tablet | default: section.settings.slide_2_image_fit | default: "cover" }};
      object-position: {{ section.settings.slide_2_image_position_tablet | default: section.settings.slide_2_image_position | default: "center" }};
    }
    .hero-root .slide-3 img {
      object-fit: {{ section.settings.slide_3_image_fit_tablet | default: section.settings.slide_3_image_fit | default: "cover" }};
      object-position: {{ section.settings.slide_3_image_position_tablet | default: section.settings.slide_3_image_position | default: "center" }};
    }
  }

  /* Mobile overrides */
  @media (max-width: 768px) {
    .hero-root .slide-1 img {
      object-fit: {{ section.settings.slide_1_image_fit_mobile | default: section.settings.slide_1_image_fit | default: "cover" }};
      object-position: {{ section.settings.slide_1_image_position_mobile | default: section.settings.slide_1_image_position | default: "center" }};
    }
    .hero-root .slide-2 img {
      object-fit: {{ section.settings.slide_2_image_fit_mobile | default: section.settings.slide_2_image_fit | default: "cover" }};
      object-position: {{ section.settings.slide_2_image_position_mobile | default: section.settings.slide_2_image_position | default: "center" }};
    }
    .hero-root .slide-3 img {
      object-fit: {{ section.settings.slide_3_image_fit_mobile | default: section.settings.slide_3_image_fit | default: "cover" }};
      object-position: {{ section.settings.slide_3_image_position_mobile | default: section.settings.slide_3_image_position | default: "center" }};
    }
  }

  .autoplay-progress {
    position: absolute;
    right: 16px;
    bottom: 16px;
    z-index: 20;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    color: white !important;
  }

  .autoplay-progress svg {
    --progress: 0;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 10;
    width: 100%;
    height: 100%;
    stroke-width: 4px;
    stroke: white !important;
    fill: none;
    stroke-dashoffset: calc(125.6px * (1 - var(--progress)));
    stroke-dasharray: 125.6;
    transform: rotate(-90deg);
  }

  /* Ensure ring stroke is white regardless of defaults */
  .autoplay-progress svg circle {
    stroke: white !important;
  }

  .autoplay-progress span {
    font-size: 12px;
    color: white;
  }

  /* Custom Pagination Styles */
  .hero-swiper .swiper-pagination-bullet {
    background: white !important;
    opacity: 1;
  }

  .hero-swiper .swiper-pagination-bullet-active {
    background: white !important;
  }
</style>

<!-- Initialize Swiper -->
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const progressCircle = document.querySelector('.autoplay-progress svg')
    const progressContent = document.querySelector('.autoplay-progress span')

    const swiperEl = document.querySelector('.hero-swiper')
    if (swiperEl) {
      swiperEl.addEventListener('autoplaytimeleft', e => {
        const [swiper, time, progress] = e.detail
        if (progressCircle) {
          progressCircle.style.setProperty('--progress', 1 - progress)
        }
        if (progressContent) {
          progressContent.textContent = `${Math.ceil(time / 1000)}s`
        }
      })
    }
  })
</script>

