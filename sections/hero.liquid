<!-- Hero Carousel Section -->
<style>
  .hero-overlay {
    padding-bottom: 3rem;
  }

  .hero-overlay .hero-overlay__inner {
    margin-bottom: 3rem;
  }

  @media (max-width: 768px) {
    .hero-overlay {
      padding-bottom: var(--hero-mobile-overlay-padding-bottom, 40px);
    }

    .hero-overlay .hero-overlay__inner {
      margin-bottom: var(--hero-mobile-overlay-inner-margin-bottom, 28px) !important;
    }

    .hero-root .hero-slide-button-wrap {
      margin-top: var(--hero-mobile-button-margin-top, 16px) !important;
      margin-bottom: var(--hero-mobile-button-margin-bottom, 0px) !important;
    }
  }

  @media (max-width: 1023px) {
    .hero-overlay {
      padding-top: calc(var(--header-height, 64px) + 16px);
      padding-bottom: 56px;
      align-items: center !important;
      justify-content: center !important;
      top: 0 !important;
      bottom: 0 !important;
    }

    .hero-overlay .hero-overlay__inner {
      margin-left: 0 !important;
      text-align: center !important;
    }
  }
</style>
<div class='relative hero-root' x-data x-cloak>
  <!-- Scaled Wrapper -->
  <div
    class='hero-scale-wrap'
    style='--hero-scale: {{ section.settings.scale_percent | default: 100 }}; --hero-scale-inv: {{ 10000 | divided_by: section.settings.scale_percent | times: 0.01 }}; --hero-radius: {% if section.settings.scale_percent and section.settings.scale_percent < 100 %}{{ section.settings.scale_radius | default: 16 }}px{% else %}0px{% endif %}; --hero-height-mobile: {{ section.settings.hero_height_mobile_px | default: 420 }}px; --hero-mobile-overlay-padding-bottom: {{ section.settings.hero_mobile_overlay_padding_bottom | default: 40 }}px; --hero-mobile-overlay-inner-margin-bottom: {{ section.settings.hero_mobile_overlay_inner_margin_bottom | default: 28 }}px; --hero-mobile-button-margin-top: {{ section.settings.hero_mobile_button_margin_top | default: 16 }}px; --hero-mobile-button-margin-bottom: {{ section.settings.hero_mobile_button_margin_bottom | default: 0 }}px;'
  >
    {% liquid
      assign default_ratio = 1.7778

      assign slide_1_image_desktop = section.settings.slide_1_image
      assign slide_1_image_tablet = section.settings.slide_1_image_tablet
      assign slide_1_image_mobile = section.settings.slide_1_image_mobile
      assign slide_1_ratio_desktop = default_ratio
      if slide_1_image_desktop
        assign slide_1_ratio_desktop = slide_1_image_desktop.aspect_ratio | default: default_ratio
      endif
      assign slide_1_ratio_tablet = slide_1_ratio_desktop
      if slide_1_image_tablet
        assign slide_1_ratio_tablet = slide_1_image_tablet.aspect_ratio | default: slide_1_ratio_desktop
      endif
      assign slide_1_ratio_mobile = slide_1_ratio_tablet
      if slide_1_image_mobile
        assign slide_1_ratio_mobile = slide_1_image_mobile.aspect_ratio | default: slide_1_ratio_tablet
      endif
      assign slide_1_base_image = slide_1_image_desktop
      if slide_1_base_image == blank
        assign slide_1_base_image = slide_1_image_tablet
      endif
      if slide_1_base_image == blank
        assign slide_1_base_image = slide_1_image_mobile
      endif

      assign slide_2_image_desktop = section.settings.slide_2_image
      assign slide_2_image_tablet = section.settings.slide_2_image_tablet
      assign slide_2_image_mobile = section.settings.slide_2_image_mobile
      assign slide_2_ratio_desktop = default_ratio
      if slide_2_image_desktop
        assign slide_2_ratio_desktop = slide_2_image_desktop.aspect_ratio | default: default_ratio
      endif
      assign slide_2_ratio_tablet = slide_2_ratio_desktop
      if slide_2_image_tablet
        assign slide_2_ratio_tablet = slide_2_image_tablet.aspect_ratio | default: slide_2_ratio_desktop
      endif
      assign slide_2_ratio_mobile = slide_2_ratio_tablet
      if slide_2_image_mobile
        assign slide_2_ratio_mobile = slide_2_image_mobile.aspect_ratio | default: slide_2_ratio_tablet
      endif
      assign slide_2_base_image = slide_2_image_desktop
      if slide_2_base_image == blank
        assign slide_2_base_image = slide_2_image_tablet
      endif
      if slide_2_base_image == blank
        assign slide_2_base_image = slide_2_image_mobile
      endif

      assign slide_3_image_desktop = section.settings.slide_3_image
      assign slide_3_image_tablet = section.settings.slide_3_image_tablet
      assign slide_3_image_mobile = section.settings.slide_3_image_mobile
      assign slide_3_ratio_desktop = default_ratio
      if slide_3_image_desktop
        assign slide_3_ratio_desktop = slide_3_image_desktop.aspect_ratio | default: default_ratio
      endif
      assign slide_3_ratio_tablet = slide_3_ratio_desktop
      if slide_3_image_tablet
        assign slide_3_ratio_tablet = slide_3_image_tablet.aspect_ratio | default: slide_3_ratio_desktop
      endif
      assign slide_3_ratio_mobile = slide_3_ratio_tablet
      if slide_3_image_mobile
        assign slide_3_ratio_mobile = slide_3_image_mobile.aspect_ratio | default: slide_3_ratio_tablet
      endif
      assign slide_3_base_image = slide_3_image_desktop
      if slide_3_base_image == blank
        assign slide_3_base_image = slide_3_image_tablet
      endif
      if slide_3_base_image == blank
        assign slide_3_base_image = slide_3_image_mobile
      endif
    %}
    <!-- Swiper Container -->
    <swiper-container
      class='hero-swiper'
      style='--swiper-theme-color: #ffffff;'
      pagination='true'
      pagination-clickable='true'
      navigation='false'
      space-between='0'
      centered-slides='true'
      autoplay-delay='{{ section.settings.autoplay_delay | default: 5000 }}'
      autoplay-disable-on-interaction='false'
      loop='true'
      auto-height='true'
    >
      <!-- Slide 1 -->
      <swiper-slide
        class='relative slide-1'
        style='--slide-aspect-desktop: {{ slide_1_ratio_desktop }}; --slide-aspect-tablet: {{ slide_1_ratio_tablet }}; --slide-aspect-mobile: {{ slide_1_ratio_mobile }};'
      >
        {% assign slide_1_button_action = section.settings.slide_1_button_action
          | default: "link"
        %}
        {% if slide_1_button_action == "form" %}
          <button
            type='button'
            class='hero-slide-media hero-slide-media-button hero-slide-1-media block w-full'
            data-klaviyo-form-id='{{ section.settings.slide_1_button_form_id | escape }}'
          >
        {% else %}
          <div class='hero-slide-media hero-slide-1-media block w-full'>
        {% endif %}
          {% if slide_1_base_image %}
            <picture class='w-full h-full block'>
              {% if slide_1_image_mobile %}
                <source
                  srcset='{{ slide_1_image_mobile | image_url: width: 1200 }}'
                  media='(max-width: 767px)'
                >
              {% endif %}
              {% if slide_1_image_tablet %}
                <source
                  srcset='{{ slide_1_image_tablet | image_url: width: 1600 }}'
                  media='(max-width: 1024px)'
                >
              {% endif %}
              <img
                src='{{ slide_1_base_image | image_url: width: 1920 }}'
                alt='{{ section.settings.slide_1_title | default: "Premium Knives" }}'
                class='w-full h-full'
                width='{{ slide_1_base_image.width }}'
                height='{{ slide_1_base_image.height }}'
                style='transform: scale({{ section.settings.slide_1_image_zoom | default: 100 | divided_by: 100.0 }});'
                loading='lazy'
              >
            </picture>
          {% else %}
            {{
              "lifestyle-1"
              | placeholder_svg_tag: "w-full h-full bg-gray-800 object-cover"
            }}
          {% endif %}
          {% if section.settings.slide_1_overlay_enable %}
            <div class='absolute inset-0 bg-black/{{ section.settings.slide_1_overlay_opacity | default: 40 }}'></div>
          {% endif %}
        {% if slide_1_button_action == "form" %}
          </button>
        {% else %}
          </div>
        {% endif %}
        {% if section.settings.show_text_overlay %}
          <div class='absolute bottom-4 lg:-bottom-4 inset-0 flex items-end justify-center lg:justify-start z-10 pointer-events-none hero-overlay'>
            <div class='text-center lg:text-left max-w-4xl px-4 lg:ml-12 lg:mb-12 hero-overlay__inner'>
              {% assign s1_shadow = section.settings.slide_1_text_shadow_strength
                | default: "soft"
              %}
              {% assign s1_op = "0.35" %}
              {% case s1_shadow %}
                {% when "none" -%}
                  {%- assign s1_op = "0" %}
                {% when "soft" -%}
                  {%- assign s1_op = "0.35" %}
                {% when "medium" -%}
                  {%- assign s1_op = "0.6" %}
                {% when "strong" -%}
                  {%- assign s1_op = "0.85" %}
              {% endcase %}
              <div class='kk-text-wrap inline-block'>
                {% if section.settings.slide_1_text_bg_enable %}
                  {% assign s1_bg_op_pct = section.settings.slide_1_text_bg_opacity
                    | default: 50
                  %}
                  {% assign s1_bg_alpha = s1_bg_op_pct | divided_by: 100.0 %}
                  <div
                    class='kk-text-bg'
                    style='background-color: {{ section.settings.slide_1_text_bg_color | default: '#000000' | color_modify: 'alpha', s1_bg_alpha }}'
                  ></div>
                {% endif %}
                <div class='kk-text-content mt-12 lg:mt-0'>
                  <h1
                    class='text-4xl md:text-6xl font-bold mb-4'
                    style='color: {{ section.settings.slide_1_text_color | default: "#ffffff" }}; text-shadow: 0 2px {{ section.settings.slide_1_text_shadow_blur | default: 6 }}px rgba(0,0,0,{{ s1_op }});'
                  >
                    {{
                      section.settings.slide_1_title
                      | default: "Premium Knives"
                    }}
                  </h1>
                  {% assign s1_subtitle = section.settings.slide_1_subtitle
                    | default: "Crafted with precision, designed for perfection"
                  %}
                  {% assign s1_sentences = s1_subtitle | split: "." %}
                  {% for sentence in s1_sentences %}
                    {% assign trimmed_sentence = sentence | strip %}
                    {% if trimmed_sentence != blank %}
                      <p
                        class='text-lg md:text-xl mb-1'
                        style='color: {{ section.settings.slide_1_text_color | default: "#ffffff" }}; text-shadow: 0 2px {{ section.settings.slide_1_text_shadow_blur | default: 6 }}px rgba(0,0,0,{{ s1_op }});'
                      >
                        {{ trimmed_sentence }}.
                      </p>
                    {% endif %}
                  {% endfor %}
                </div>
              </div>
              {% if section.settings.slide_1_button_enable
                and section.settings.slide_1_button_text != blank
              %}
                <div class='hero-slide-button-wrap pointer-events-auto'>
                  {% assign slide_1_button_action = section.settings.slide_1_button_action
                    | default: "link"
                  %}
                  {% if slide_1_button_action == "form" %}
                    <button
                      type='button'
                      class='hero-slide-1-button inline-block font-semibold py-3 px-8 rounded-lg transition-colors duration-300'
                      style='background-color: {{ section.settings.slide_1_button_bg_color | default: "#2563eb" }}; color: {{ section.settings.slide_1_button_text_color | default: "#ffffff" }};'
                      data-klaviyo-form-id='{{ section.settings.slide_1_button_form_id | escape }}'
                    >
                      {{ section.settings.slide_1_button_text }}
                    </button>
                  {% else %}
                    <a
                      href='{{ section.settings.slide_1_button_url | default: "/collections/professional" }}'
                      class='hero-slide-1-button inline-block font-semibold py-3 px-8 rounded-lg transition-colors duration-300'
                      style='background-color: {{ section.settings.slide_1_button_bg_color | default: "#2563eb" }}; color: {{ section.settings.slide_1_button_text_color | default: "#ffffff" }};'
                    >
                      {{ section.settings.slide_1_button_text }}
                    </a>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          </div>
        {% endif %}
      </swiper-slide>

      <!-- Slide 2 -->
      {% assign slide_2_button_action = section.settings.slide_2_button_action
        | default: "link"
      %}
      <swiper-slide
        class='relative slide-2'
        style='--slide-aspect-desktop: {{ slide_2_ratio_desktop }}; --slide-aspect-tablet: {{ slide_2_ratio_tablet }}; --slide-aspect-mobile: {{ slide_2_ratio_mobile }};'
      >
        {% if slide_2_button_action == "form" %}
          <button
            type='button'
            class='hero-slide-media hero-slide-media-button hero-slide-2-media block w-full'
            data-klaviyo-form-id='{{ section.settings.slide_2_button_form_id | escape }}'
          >
        {% else %}
          <a
            href='{{ section.settings.slide_2_button_url | default: "/collections/professional" }}'
            class='hero-slide-media hero-slide-2-media block w-full'
          >
        {% endif %}
          {% if slide_2_base_image %}
            <picture class='w-full h-full block'>
              {% if slide_2_image_mobile %}
                <source
                  srcset='{{ slide_2_image_mobile | image_url: width: 1200 }}'
                  media='(max-width: 767px)'
                >
              {% endif %}
              {% if slide_2_image_tablet %}
                <source
                  srcset='{{ slide_2_image_tablet | image_url: width: 1600 }}'
                  media='(max-width: 1024px)'
                >
              {% endif %}
              <img
                src='{{ slide_2_base_image | image_url: width: 1920 }}'
                alt='{{ section.settings.slide_2_title | default: "Professional Grade" }}'
                class='w-full h-full'
                width='{{ slide_2_base_image.width }}'
                height='{{ slide_2_base_image.height }}'
                style='transform: scale({{ section.settings.slide_2_image_zoom | default: 100 | divided_by: 100.0 }});'
                loading='lazy'
              >
            </picture>
          {% else %}
            {{
              "lifestyle-1"
              | placeholder_svg_tag: "w-full h-full bg-gray-800 object-cover"
            }}
          {% endif %}
          {% if section.settings.slide_2_overlay_enable %}
            <div class='absolute inset-0 bg-black/{{ section.settings.slide_2_overlay_opacity | default: 40 }}'></div>
          {% endif %}
        {% if slide_2_button_action == "form" %}
          </button>
        {% else %}
          </a>
        {% endif %}
        {% if section.settings.show_text_overlay %}
          <div class='absolute bottom-8 lg:-bottom-4 inset-0 flex items-end justify-center lg:justify-start z-10 pointer-events-none hero-overlay'>
            <div class='text-center lg:text-left max-w-4xl px-4 lg:ml-12 lg:mb-20 hero-overlay__inner'>
              {% assign s2_shadow = section.settings.slide_2_text_shadow_strength
                | default: "soft"
              %}
              {% assign s2_op = "0.35" %}
              {% case s2_shadow %}
                {% when "none" -%}
                  {%- assign s2_op = "0" %}
                {% when "soft" -%}
                  {%- assign s2_op = "0.35" %}
                {% when "medium" -%}
                  {%- assign s2_op = "0.6" %}
                {% when "strong" -%}
                  {%- assign s2_op = "0.85" %}
              {% endcase %}
              <div class='kk-text-wrap inline-block'>
                {% if section.settings.slide_2_text_bg_enable %}
                  {% assign s2_bg_op_pct = section.settings.slide_2_text_bg_opacity
                    | default: 50
                  %}
                  {% assign s2_bg_alpha = s2_bg_op_pct | divided_by: 100.0 %}
                  <div
                    class='kk-text-bg'
                    style='background-color: {{ section.settings.slide_2_text_bg_color | default: '#000000' | color_modify: 'alpha', s2_bg_alpha }}'
                  ></div>
                {% endif %}
                <div class='kk-text-content pt-4'>
                  <h1
                    class='text-4xl md:text-6xl font-bold mb-4'
                    style='color: {{ section.settings.slide_2_text_color | default: "#ffffff" }}; text-shadow: 0 2px {{ section.settings.slide_2_text_shadow_blur | default: 6 }}px rgba(0,0,0,{{ s2_op }});'
                  >
                    {{
                      section.settings.slide_2_title
                      | default: "Professional Grade"
                    }}
                  </h1>
                  {% assign s2_subtitle = section.settings.slide_2_subtitle
                    | default: "Tools that professionals trust"
                  %}
                  {% assign s2_sentences = s2_subtitle | split: "." %}
                  {% for sentence in s2_sentences %}
                    {% assign trimmed_sentence = sentence | strip %}
                    {% if trimmed_sentence != blank %}
                      <p
                        class='text-lg md:text-xl mb-1'
                        style='color: {{ section.settings.slide_2_text_color | default: "#ffffff" }}; text-shadow: 0 2px {{ section.settings.slide_2_text_shadow_blur | default: 6 }}px rgba(0,0,0,{{ s2_op }});'
                      >
                        {{ trimmed_sentence }}.
                      </p>
                    {% endif %}
                  {% endfor %}
                </div>
              </div>
              {% if section.settings.slide_2_button_enable
                and section.settings.slide_2_button_text != blank
              %}
                <div class='hero-slide-button-wrap pointer-events-auto'>
                  {% assign slide_2_button_action = section.settings.slide_2_button_action
                    | default: "link"
                  %}
                  {% if slide_2_button_action == "form" %}
                    <button
                      type='button'
                      class='hero-slide-2-button inline-block font-semibold py-3 px-8 rounded-lg transition-colors duration-300'
                      style='background-color: {{ section.settings.slide_2_button_bg_color | default: "#2563eb" }}; color: {{ section.settings.slide_2_button_text_color | default: "#ffffff" }};'
                      data-klaviyo-form-id='{{ section.settings.slide_2_button_form_id | escape }}'
                    >
                      {{ section.settings.slide_2_button_text }}
                    </button>
                  {% else %}
                    <a
                      href='{{ section.settings.slide_2_button_url | default: "/collections/professional" }}'
                      class='hero-slide-2-button inline-block font-semibold py-3 px-8 rounded-lg transition-colors duration-300'
                      style='background-color: {{ section.settings.slide_2_button_bg_color | default: "#2563eb" }}; color: {{ section.settings.slide_2_button_text_color | default: "#ffffff" }};'
                    >
                      {{ section.settings.slide_2_button_text }}
                    </a>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          </div>
        {% endif %}

        <!-- Mobile texts and button -->
        {% comment %}
          {% if section.settings.show_text_overlay %}
            <div class='absolute  md:hidden bottom-8 lg:-bottom-4 inset-0 z-10 pointer-events-none'>
              <div class='text-center lg:text-left max-w-4xl px-4 lg:ml-12 lg:mb-20 flex flex-col items-center justify-between h-full pt-16 pb-14'>
                {% assign s2_shadow = section.settings.slide_2_text_shadow_strength
                  | default: "soft"
                %}
                {% assign s2_op = "0.35" %}
                {% case s2_shadow %}
                  {% when "none" -%}
                    {%- assign s2_op = "0" %}
                  {% when "soft" -%}
                    {%- assign s2_op = "0.35" %}
                  {% when "medium" -%}
                    {%- assign s2_op = "0.6" %}
                  {% when "strong" -%}
                    {%- assign s2_op = "0.85" %}
                {% endcase %}
                <div class='kk-text-wrap inline-block'>
                  {% if section.settings.slide_2_text_bg_enable %}
                    {% assign s2_bg_op_pct = section.settings.slide_2_text_bg_opacity
                      | default: 50
                    %}
                    {% assign s2_bg_alpha = s2_bg_op_pct | divided_by: 100.0 %}
                    <div
                      class='kk-text-bg'
                      style='background-color: {{ section.settings.slide_2_text_bg_color | default: '#000000' | color_modify: 'alpha', s2_bg_alpha }}'
                    ></div>
                  {% endif %}
                  <div class='kk-text-content'>
                    <h1
                      class='text-4xl md:text-6xl font-bold mb-4'
                      style='color: {{ section.settings.slide_2_text_color | default: "#ffffff" }}; text-shadow: 0 2px {{ section.settings.slide_2_text_shadow_blur | default: 6 }}px rgba(0,0,0,{{ s2_op }});'
                    >
                      {{
                        section.settings.slide_2_title
                        | default: "Professional Grade"
                      }}
                    </h1>
                    {% assign s2_subtitle = section.settings.slide_2_subtitle
                      | default: "Tools that professionals trust"
                    %}
                    {% assign s2_sentences = s2_subtitle | split: "." %}
                    {% for sentence in s2_sentences %}
                      {% assign trimmed_sentence = sentence | strip %}
                      {% if trimmed_sentence != blank %}
                        <p
                          class='text-lg md:text-xl mb-1'
                          style='color: {{ section.settings.slide_2_text_color | default: "#ffffff" }}; text-shadow: 0 2px {{ section.settings.slide_2_text_shadow_blur | default: 6 }}px rgba(0,0,0,{{ s2_op }});'
                        >
                          {{ trimmed_sentence }}.
                        </p>
                      {% endif %}
                    {% endfor %}
                  </div>
                </div>
                {% if section.settings.slide_2_button_enable
                  and section.settings.slide_2_button_text != blank
                %}
                  <div class='mt-4 pointer-events-auto'>
                    <a
                      href='{{ section.settings.slide_2_button_url | default: "/collections/professional" }}'
                      class='inline-block font-semibold py-3 px-8 rounded-lg transition-colors duration-300'
                      style='background-color: {{ section.settings.slide_2_button_bg_color | default: "#2563eb" }}; color: {{ section.settings.slide_2_button_text_color | default: "#ffffff" }};'
                    >
                      {{ section.settings.slide_2_button_text }}
                    </a>
                  </div>
                {% endif %}
              </div>
            </div>
          {% endif %}
        {% endcomment %}
      </swiper-slide>

      <!-- Slide 3 -->
      {% assign slide_3_button_action = section.settings.slide_3_button_action
        | default: "link"
      %}
      <swiper-slide
        class='relative slide-3'
        style='--slide-aspect-desktop: {{ slide_3_ratio_desktop }}; --slide-aspect-tablet: {{ slide_3_ratio_tablet }}; --slide-aspect-mobile: {{ slide_3_ratio_mobile }};'
      >
        {% if slide_3_button_action == "form" %}
          <button
            type='button'
            class='hero-slide-media hero-slide-media-button hero-slide-3-media block w-full'
            data-klaviyo-form-id='{{ section.settings.slide_3_button_form_id | escape }}'
          >
        {% else %}
          <a
            href='{{ section.settings.slide_3_button_url | default: "/pages/about" }}'
            class='hero-slide-media hero-slide-3-media block w-full'
          >
        {% endif %}
          {% if slide_3_base_image %}
            <picture class='w-full h-full block'>
              {% if slide_3_image_mobile %}
                <source
                  srcset='{{ slide_3_image_mobile | image_url: width: 1200 }}'
                  media='(max-width: 767px)'
                >
              {% endif %}
              {% if slide_3_image_tablet %}
                <source
                  srcset='{{ slide_3_image_tablet | image_url: width: 1600 }}'
                  media='(max-width: 1024px)'
                >
              {% endif %}
              <img
                src='{{ slide_3_base_image | image_url: width: 1920 }}'
                alt='{{ section.settings.slide_3_title | default: "Handcrafted Excellence" }}'
                class='w-full h-full'
                width='{{ slide_3_base_image.width }}'
                height='{{ slide_3_base_image.height }}'
                style='transform: scale({{ section.settings.slide_3_image_zoom | default: 100 | divided_by: 100.0 }});'
                loading='lazy'
              >
            </picture>
          {% else %}
            {{
              "lifestyle-1"
              | placeholder_svg_tag: "w-full h-full bg-gray-800 object-cover"
            }}
          {% endif %}
          {% if section.settings.slide_3_overlay_enable %}
            <div class='absolute inset-0 bg-black/{{ section.settings.slide_3_overlay_opacity | default: 40 }}'></div>
          {% endif %}
        {% if slide_3_button_action == "form" %}
          </button>
        {% else %}
          </a>
        {% endif %}
        {% if section.settings.show_text_overlay %}
          <div class='absolute bottom-8 lg:-bottom-4 inset-0 flex items-end justify-center lg:justify-start z-10 pointer-events-none hero-overlay'>
            <div class='text-center lg:text-left max-w-4xl px-4 lg:ml-12 lg:mb-20 hero-overlay__inner'>
              {% assign s3_shadow = section.settings.slide_3_text_shadow_strength
                | default: "soft"
              %}
              {% assign s3_op = "0.35" %}
              {% case s3_shadow %}
