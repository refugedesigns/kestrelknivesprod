        if (!name) return false;
        const n = name.toLowerCase();
        return COLOR_KEYWORDS.some(k => n.includes(k));
      }
      function isSizeOption(name) {
        if (!name) return false;
        const n = name.toLowerCase();
        return SIZE_KEYWORDS.some(k => n.includes(k));
      }

      // Utility to build a normalized key for a variant from its options array
      function variantKeyFromOptionsArray(optionsArray) {
        // keep explicit order, join by "||"
        return optionsArray.map(v => String(v || '').trim()).join('||');
      }

      // Build variants data from window.__product
      const product = window.__product || {};
      const variants = (product.variants || []).map(v => {
        const opts = [];
        if (v.option1 !== undefined) opts.push(v.option1);
        if (v.option2 !== undefined) opts.push(v.option2);
        if (v.option3 !== undefined) opts.push(v.option3);
        return {
          id: v.id,
          title: v.title,
          options: opts,
          available: v.available,
          price: v.price, // in cents (Shopify JSON)
          compare_at_price: v.compare_at_price,
          featured_image: v.featured_image ? (v.featured_image.src || v.featured_image) : null,
          sku: v.sku || '',
          barcode: v.barcode || '',
        };
      });

      const variantsMap = {};
      variants.forEach(v => {
        const key = variantKeyFromOptionsArray(v.options);
        variantsMap[key] = v;
      });

      // Initial selected options: read from selected_or_first_available_variant if present
      const initialVariant = (product.selected_or_first_available_variant) ? product.selected_or_first_available_variant : (variants[0] || null);
      const initialOptions = [];
      if (initialVariant) {
        if (initialVariant.option1 !== undefined) initialOptions.push(initialVariant.option1);
        if (initialVariant.option2 !== undefined) initialOptions.push(initialVariant.option2);
        if (initialVariant.option3 !== undefined) initialOptions.push(initialVariant.option3);
      }

      if (useComplexOptions && initialOptions.length) {
        const fallbackPrimary =
          (product.options_with_values &&
            product.options_with_values[0] &&
            product.options_with_values[0].values &&
            product.options_with_values[0].values[0]) ||
          '';
        const defaultPrimary =
          complexConfig.defaultPrimaryValue ||
          initialOptions[0] ||
          fallbackPrimary ||
          '';
        initialOptions[0] = defaultPrimary;
        for (let i = 1; i < initialOptions.length; i++) {
          initialOptions[i] = '';
        }
      }

      // Expose Alpine-style productPage object (keeps your existing Alpine usage)
      window.productPage = function () {
        return {
          currentImageIndex: 0,
          quantity: 1,
          productImages: [
            {% for media in product.media %}
              '{{ media | img_url: "2048x2048" }}'{% unless forloop.last %},{% endunless %}
            {% endfor %}
          ],
          useComplexOptions,
          complexLayerState: {},
          complexPreviewMode: true,

          // dynamic selected options (kept in array ordered by product.options index)
          selectedOptions: initialOptions.slice(),

          init() {
            // initial image set
            if (this.useComplexOptions) {
              this.initComplexOptions();
            } else {
              this.changeImage(0);
            }

            // Populate option input listeners (radio/button inputs)
            this.bindOptionInputs();

            // set initial UI state based on initialVariant
            this.updateSelectedVariantByOptions(this.selectedOptions);

            // sync sticky size selector on initialization
            setTimeout(() => {
              if (typeof window.syncStickySizeSelector === 'function') {
                window.syncStickySizeSelector();
              }
            }, 100);

            // watch for page scroll/resize (you already do this; keep in component)
          },

          bindOptionInputs() {
            // find all inputs that select options (name like options[Option Name])
            const optionInputs = document.querySelectorAll('input[name^="options["], select[name^="options["]');
            optionInputs.forEach(input => {
              const nameAttr = input.name.replace(/^options\[(.+)\]$/, '$1');
              const optionIndex = this.getOptionIndexByName(nameAttr); // 0-based
              if (optionIndex !== -1) {
                input.dataset.optionIndex = optionIndex;
              }
              input.addEventListener('change', (e) => {
                if (optionIndex === -1) return;

                const value = input.value;
                this.selectedOptions[optionIndex] = value;
                if (this.useComplexOptions && optionIndex === 0) {
                  this.handleComplexPrimarySelection(value, input.dataset.complexAsset || null);
                }
                this.updateSelectedVariantByOptions(this.selectedOptions);
              });
            });

            // If options are represented by clickable labels without inputs, also handle clicks
            // (some themes wrap radio in label; events bubble, so change should capture)
          },

          getOptionIndexByName(name) {
            if (!product.options) return -1;
            for (let i = 0; i < product.options.length; i++) {
              if ((product.options[i] || '').toString().toLowerCase().trim() === (name || '').toLowerCase().trim()) {
                return i;
              }
            }
            // fallback: try matching by substring
            const lname = (name || '').toLowerCase();
            for (let i = 0; i < product.options.length; i++) {
              if ((product.options[i] || '').toString().toLowerCase().includes(lname) || lname.includes((product.options[i]||'').toLowerCase())) {
                return i;
              }
            }
            return -1;
          },

          updateSelectedVariantByOptions(optionsArray) {
            // Normalize length to product.options length
            const optionCount = (product.options || []).length;
            const normalized = new Array(optionCount).fill('');
            for (let i = 0; i < optionCount; i++) {
              if (optionsArray[i]) {
                normalized[i] = optionsArray[i];
              } else if (!this.useComplexOptions) {
                normalized[i] =
                  (product.options_with_values &&
                    product.options_with_values[i] &&
                    product.options_with_values[i].selected_value) ||
                  '';
              }
            }

            let variant = null;

            if (this.useComplexOptions) {
              const desiredPrimary =
                (normalized[0] ||
                  complexConfig.defaultPrimaryValue ||
                  '') + '';
              const primaryMatches = variants.filter(v => {
                return (
                  (v.options &&
                    v.options[0] &&
                    v.options[0].toString().trim()) === desiredPrimary.trim()
                );
              });

              // Prefer variant that matches primary + any other selected options
              variant =
                primaryMatches.find(v => {
                  for (let i = 1; i < normalized.length; i++) {
                    if (
                      normalized[i] &&
                      (v.options[i] || '').toString().trim() !== normalized[i].toString().trim()
                    ) {
                      return false;
                    }
                  }
                  return true;
                }) ||
                primaryMatches.find(v => v.available) ||
                primaryMatches[0] ||
                variants.find(v => v.available) ||
                variants[0] ||
                null;

              if (variant) {
                normalized[0] = variant.options[0];
                for (let i = 1; i < optionCount; i++) {
                  if (!normalized[i]) {
                    normalized[i] = variant.options[i];
                  }
                }
              }
            } else {
              const key = variantKeyFromOptionsArray(normalized);
              variant = variantsMap[key];

              // If exact variant not found try to find a match by partial values (best effort)
              if (!variant) {
                // try to find first variant which matches all non-empty selected values
                variant = variants.find(v => {
                  for (let i = 0; i < normalized.length; i++) {
                    if (
                      normalized[i] &&
                      (v.options[i] || '').toString().trim() !== normalized[i].toString().trim()
                    ) {
                      return false;
                    }
                  }
                  return true;
                });
              }
            }

            // final fallback
            if (!variant) {
              variant = variants.find(v => v.available) || variants[0] || null;
            }

             if (variant) {
               // update hidden input
               const variantInput = document.getElementById('variantIdInput');
               if (variantInput) variantInput.value = variant.id;

               // update option button states
               this.updateOptionButtonStates(optionsArray);

               // update price / compare price / sale badge
               this.updatePriceDisplay(variant);

               // update availability
               this.updateAvailability(variant);

               // update main image if variant has featured_image
              if (!this.useComplexOptions && variant.featured_image) {
                 const mainImage = document.getElementById('mainImage');
                 if (mainImage && mainImage.src.indexOf(variant.featured_image) === -1) {
                   mainImage.src = variant.featured_image;
                 }
               }

               // update add to cart button state
               this.updateAddToCartState(variant);
               
               // sync sticky size selector if it exists
               if (typeof window.syncStickySizeSelector === 'function') {
                 window.syncStickySizeSelector();
               }
             }
          },

          updateOptionButtonStates(selectedOptions) {
            // Update all option inputs to reflect the selected state
            const optionInputs = document.querySelectorAll('input[name^="options["], select[name^="options["]');

            optionInputs.forEach(input => {
              const name = input.name.replace(/^options\[(.+)\]$/, '$1');
              const optionIndex = this.getOptionIndexByName(name);

              if (optionIndex !== -1 && selectedOptions[optionIndex]) {
                const isSelected = input.value === selectedOptions[optionIndex];
                
                // Update radio button checked state
                if (input.type === 'radio') {
                  input.checked = isSelected;
                }
                
                // Update visual styling for the option button/label
                this.updateOptionButtonVisualState(input, isSelected);
              }
            });
          },

          updateOptionButtonVisualState(input, isSelected) {
            // Find the parent label or button container
            const label = input.closest('label');
            const button = label ? label.querySelector('div') : null;
            if (button) {
              if (isSelected) {
                // Selected state - black border only (no background)
                button.classList.remove('border-gray-300', 'hover:border-black');
                button.classList.add('border-black');
                
                // Update text color for color options
                const textSpan = button.parentElement.querySelector('span');
                if (textSpan) {
                  textSpan.classList.remove('text-gray-600');
                  textSpan.classList.add('text-black');
                }
              } else {
                // Unselected state - gray border
                button.classList.remove('border-black');
                button.classList.add('border-gray-300', 'hover:border-black');
                
                // Reset text color for color options
                const textSpan = button.parentElement.querySelector('span');
                if (textSpan) {
                  textSpan.classList.remove('text-black');
                  textSpan.classList.add('text-gray-600');
                }
              }
            }
          },

          updatePriceDisplay(variant) {
            const priceEl = document.getElementById('price');
            const compareEl = document.getElementById('comparePrice');
            const saleEl = document.getElementById('saleBadge');
            const stickyPriceEl = document.getElementById('stickyPrice');

             // Use Shopify's pre-formatted prices
             function formatMoney(cents) {
               if (typeof cents !== 'number') return '';
               // Find the variant with this price
               const variant = variants.find(v => v.price === cents);
               if (variant && window.__formattedPrices && window.__formattedPrices[variant.id]) {
                 return window.__formattedPrices[variant.id];
               }
               // Fallback to basic formatting
               return (cents / 100).toFixed(2);
             }

             function formatComparePrice(cents) {
               if (typeof cents !== 'number') return '';
               // Find the variant with this compare price
               const variant = variants.find(v => v.compare_at_price === cents);
               if (variant && window.__formattedComparePrices && window.__formattedComparePrices[variant.id]) {
                 return window.__formattedComparePrices[variant.id];
               }
               // Fallback to basic formatting
               return (cents / 100).toFixed(2);
             }

            const formattedPrice = formatMoney(variant.price);
            if (priceEl) priceEl.innerText = formattedPrice;
            if (stickyPriceEl) stickyPriceEl.innerText = formattedPrice;

            if (compareEl) {
              if (variant.compare_at_price && Number(variant.compare_at_price) > Number(variant.price)) {
                compareEl.style.display = 'inline-block';
                compareEl.innerText = formatComparePrice(variant.compare_at_price);
                if (saleEl) saleEl.style.display = 'inline-block';
              } else {
                if (compareEl) compareEl.style.display = 'none';
                if (saleEl) saleEl.style.display = 'none';
              }
            }
          },

          updateAvailability(variant) {
            const availability = document.getElementById('availability');
            if (!availability) return;
            if (variant.available) {
              availability.innerText = 'In stock';
              availability.classList.remove('text-red-600');
              availability.classList.add('text-green-600');
            } else {
              availability.innerText = 'Sold out';
              availability.classList.remove('text-green-600');
              availability.classList.add('text-red-600');
            }
          },

          updateAddToCartState(variant) {
            const btn = document.getElementById('addToCartBtn');
            const sticky = document.getElementById('stickyAddToCartBtn');
            if (!btn && !sticky) return;
            const statusText = '{{ product_status_text | escape }}';
            const hasStatus = statusText && statusText.trim().length > 0;
            if (hasStatus) {
              if (btn) {
                btn.setAttribute('disabled','disabled');
                btn.classList.add('opacity-50','cursor-not-allowed');
                btn.innerText = statusText;
              }
              if (sticky) {
                sticky.setAttribute('disabled','disabled');
                sticky.classList.add('opacity-50','cursor-not-allowed');
                sticky.textContent = statusText;
              }
            } else if (!variant.available) {
              if (btn) {
                btn.setAttribute('disabled','disabled');
                btn.classList.add('opacity-50','cursor-not-allowed');
                btn.innerText = 'SOLD OUT';
              }
              if (sticky) {
                sticky.setAttribute('disabled','disabled');
                sticky.classList.add('opacity-50','cursor-not-allowed');
                sticky.textContent = 'SOLD OUT';
              }
            } else {
              if (btn) {
                btn.removeAttribute('disabled');
                btn.classList.remove('opacity-50','cursor-not-allowed');
                btn.innerText = 'ADD TO CART';
              }
              if (sticky) {
                sticky.removeAttribute('disabled');
                sticky.classList.remove('opacity-50','cursor-not-allowed');
                sticky.textContent = 'ADD TO CART';
              }
            }
          },

          initComplexOptions() {
            this.ensureComplexPrimaryDefault();
            this.resetComplexLayerUI();
            this.bindComplexLayerButtons();
            const defaultPrimaryInput = document.querySelector('input[data-option-index="0"][type="radio"]:checked') ||
              document.querySelector('input[data-option-index="0"][type="radio"]');
            if (defaultPrimaryInput) {
              const asset = defaultPrimaryInput.dataset.complexAsset || this.lookupComplexAsset(0, defaultPrimaryInput.value);
              const resolved = asset || complexConfig.defaultPrimaryAsset || complexConfig.fallbackImage || '';
              this.setComplexBaseImage(resolved);
              this.selectedOptions[0] = defaultPrimaryInput.value;
            } else {
              this.setComplexBaseImage(complexConfig.defaultPrimaryAsset || complexConfig.fallbackImage || '');
            }
          },

          ensureComplexPrimaryDefault() {
            const checked = document.querySelector('input[data-option-index="0"][type="radio"]:checked');
            if (checked) {
              return;
            }
            const firstRadio = document.querySelector('input[data-option-index="0"][type="radio"]');
            if (firstRadio) {
              firstRadio.checked = true;
            }
          },

          resetComplexLayerUI() {
            this.complexLayerState = {};
            const container = document.getElementById('complexOverlayContainer');
            if (container) container.innerHTML = '';
            const buttons = document.querySelectorAll('[data-complex-option-button]');
            buttons.forEach(btn => {
              btn.classList.remove('is-active');
              btn.setAttribute('aria-pressed', 'false');
            });
          },

          bindComplexLayerButtons() {
            const buttons = document.querySelectorAll('[data-complex-option-button]');
            buttons.forEach(button => {
              button.addEventListener('click', (event) => {
                if (event) event.preventDefault();
                this.handleComplexLayerButton(button);
              });
            });
          },

          handleComplexLayerButton(button) {
            this.ensureLayeredPreview();
            const optionIndex = Number(button.dataset.complexOptionIndex);
            const optionValue = button.dataset.optionValue;
            const assetUrl = button.dataset.asset || this.lookupComplexAsset(optionIndex, optionValue);
            const currentState = this.complexLayerState[optionIndex];
            const isActive = currentState && currentState.value === optionValue;

            if (isActive) {
              this.complexLayerState[optionIndex] = null;
              this.selectedOptions[optionIndex] = '';
              this.updateComplexLayerElement(optionIndex, null);
              this.setComplexLayerButtonState(optionIndex, optionValue, false);
            } else {
              this.complexLayerState[optionIndex] = { value: optionValue, asset: assetUrl };
              this.selectedOptions[optionIndex] = optionValue;
              this.updateComplexLayerElement(optionIndex, assetUrl);
              this.setComplexLayerButtonState(optionIndex, optionValue, true);
            }
          },

          handleComplexPrimarySelection(value, assetUrl) {
            if (!this.useComplexOptions) return;
             this.ensureLayeredPreview();
            const resolvedAsset =
              assetUrl ||
              this.lookupComplexAsset(0, value) ||
              complexConfig.defaultPrimaryAsset ||
              complexConfig.fallbackImage ||
              '';
            this.setComplexBaseImage(resolvedAsset);
          },

          ensureLayeredPreview() {
            if (!this.useComplexOptions) return;
            if (this.complexPreviewMode) return;
            this.complexPreviewMode = true;
            this.restoreLayeredBase();
            const container = document.getElementById('complexOverlayContainer');
            if (container) container.classList.remove('hidden');
          },

          showLayeredPreview() {
            if (!this.useComplexOptions) return;
            this.complexPreviewMode = false; // force re-enable
            this.ensureLayeredPreview();
          },

          enterStandardMediaMode(imageUrl) {
            if (!this.useComplexOptions) return;
            this.complexPreviewMode = false;
            const container = document.getElementById('complexOverlayContainer');
            if (container) container.classList.add('hidden');
            const baseImg = document.getElementById('complexBaseImage');
            if (baseImg && imageUrl) {
              baseImg.src = imageUrl;
            }
          },

          setComplexBaseImage(assetUrl) {
            const baseImg = document.getElementById('complexBaseImage');
            if (!baseImg) return;
            const sanitized = typeof assetUrl === 'string' ? assetUrl.trim() : '';
            const fallback =
              complexConfig.defaultPrimaryAsset ||
              complexConfig.fallbackImage ||
              baseImg.getAttribute('data-default-src') ||
              '';
            const nextSrc = sanitized || fallback;
            if (nextSrc) {
              baseImg.src = nextSrc;
            }
          },

          restoreLayeredBase() {
            if (!this.useComplexOptions) return;
            const primaryValue = this.selectedOptions[0];
            const asset =
              (primaryValue && this.lookupComplexAsset(0, primaryValue)) ||
              complexConfig.defaultPrimaryAsset ||
              complexConfig.fallbackImage ||
              '';
            this.setComplexBaseImage(asset);
          },

          updateComplexLayerElement(optionIndex, assetUrl) {
            const container = document.getElementById('complexOverlayContainer');
            if (!container) return;
            const selector = `[data-layer-group="${optionIndex}"]`;
            let img = container.querySelector(selector);
            if (assetUrl) {
              if (!img) {
                img = document.createElement('img');
                img.dataset.layerGroup = optionIndex;
                container.appendChild(img);
              }
              img.src = assetUrl;
              img.style.zIndex = String(10 + Number(optionIndex || 0));
            } else if (img) {
              img.remove();
            }
          },

          setComplexLayerButtonState(optionIndex, value, active) {
            const selector = `[data-complex-option-button][data-complex-option-index="${optionIndex}"]`;
            const buttons = document.querySelectorAll(selector);
            buttons.forEach(btn => {
              const isTarget = btn.dataset.optionValue === value;
              if (isTarget) {
                if (active) {
                  btn.classList.add('is-active');
                  btn.setAttribute('aria-pressed', 'true');
                } else {
                  btn.classList.remove('is-active');
                  btn.setAttribute('aria-pressed', 'false');
                }
              } else if (active) {
                btn.classList.remove('is-active');
                btn.setAttribute('aria-pressed', 'false');
              }
            });
          },

          lookupComplexAsset(optionIndex, value) {
            if (!complexConfig || !complexConfig.options) return '';
            const optionMeta = complexConfig.options.find(opt => Number(opt.index) === Number(optionIndex));
            if (!optionMeta || !optionMeta.assets) {
              console.log('lookupComplexAsset: missing metadata', { optionIndex, value });
              return '';
            }
            const asset = optionMeta.assets[value] || '';
            console.log('lookupComplexAsset:', { optionIndex, value, asset });
            return asset;
          },

          changeImage(index) {
            const mainImage = document.getElementById('mainImage');
            const thumbnails = Array.from(document.querySelectorAll('.thumbnail'));
            const thumbnailContainer = document.getElementById('thumbnailStrip');

            if (index >= 0 && index < this.productImages.length) {
              this.currentImageIndex = index;
              if (this.useComplexOptions) {
                this.enterStandardMediaMode(this.productImages[index]);
              } else if (mainImage) {
                mainImage.src = this.productImages[index];
              }

              // Update thumbnail borders
              thumbnails.forEach((thumbnail, i) => {
                if (i === index) {
                  thumbnail.classList.remove('border-gray-200');
                  thumbnail.classList.add('border-black');
                } else {
                  thumbnail.classList.remove('border-black');
                  thumbnail.classList.add('border-gray-200');
                }
              });

              // Auto-scroll only when clicking edge thumbnails and there are more to reveal
              if (thumbnailContainer && thumbnails[index]) {
                const selected = thumbnails[index];
                const padding = 16;
                const containerRect = thumbnailContainer.getBoundingClientRect();
                const thumbRect = selected.getBoundingClientRect();
                const containerWidth = thumbnailContainer.clientWidth;
                const maxScroll = thumbnailContainer.scrollWidth - containerWidth;
                const scrollLeft = thumbnailContainer.scrollLeft;

                const hasMoreLeft = scrollLeft > 0;
                const hasMoreRight = scrollLeft < maxScroll;

                if (thumbRect.left <= containerRect.left + padding && hasMoreLeft) {
                  const target = Math.max(0, selected.offsetLeft - padding - containerWidth * 0.3);
                  thumbnailContainer.scrollTo({ left: target, behavior: 'smooth' });
                } else if (thumbRect.right >= containerRect.right - padding && hasMoreRight) {
                  const target = Math.min(
                    maxScroll,
                    selected.offsetLeft + selected.clientWidth + padding + containerWidth * 0.3 - containerWidth
                  );
                  thumbnailContainer.scrollTo({ left: target, behavior: 'smooth' });
                }
              }

              updateThumbFades();
              updateMobileDots();
            }
          },

          previousImage() {
            const newIndex = this.currentImageIndex > 0 ? this.currentImageIndex - 1 : this.productImages.length - 1;
            this.changeImage(newIndex);
          },

          nextImage() {
            const newIndex = this.currentImageIndex < this.productImages.length - 1 ? this.currentImageIndex + 1 : 0;
            this.changeImage(newIndex);
          },

          openGallery() {
            if (this.useComplexOptions) return;
            const fullscreenGallery = document.querySelector('[x-data*="fullscreenGallery"]');
            if (fullscreenGallery && fullscreenGallery._x_dataStack && fullscreenGallery._x_dataStack[0]) {
              fullscreenGallery._x_dataStack[0].isOpen = true;
              fullscreenGallery._x_dataStack[0].currentSlide = this.currentImageIndex;
              document.body.style.overflow = 'hidden';
            }
          },

          decreaseQuantity() {
            if (this.quantity > 1) {
              this.quantity--;
            }
          },

          increaseQuantity() {
            this.quantity++;
          },

          openFullscreenGallery() {
            if (this.useComplexOptions) return;
            const fullscreenGallery = document.querySelector('[x-data*="fullscreenGallery"]');
            if (fullscreenGallery && fullscreenGallery._x_dataStack && fullscreenGallery._x_dataStack[0]) {
              fullscreenGallery._x_dataStack[0].isOpen = true;
              document.body.style.overflow = 'hidden';
            }
          },

          handleStickyBehavior() {}
        };
      };


      function getProductPageState() {
        const el = document.querySelector('[x-data*="productPage"]');
        if (el && el._x_dataStack && el._x_dataStack[0]) {
          return el._x_dataStack[0];
        }
        if (window._productPageFallback) {
          return window._productPageFallback;
        }
        return null;
      }

      function updateThumbFades() {
        const strip = document.getElementById('thumbnailStrip');
        const leftFade = document.getElementById('thumbFadeLeft');
        const rightFade = document.getElementById('thumbFadeRight');
        if (!strip || !leftFade || !rightFade) return;

        const containerWidth = strip.clientWidth;
        const maxScroll = strip.scrollWidth - containerWidth;
        if (maxScroll <= 0) {
          leftFade.classList.remove('is-visible');
          rightFade.classList.remove('is-visible');
          return;
        }

        const scrollLeft = strip.scrollLeft;
        leftFade.classList.toggle('is-visible', scrollLeft > 0);
        rightFade.classList.toggle('is-visible', scrollLeft < maxScroll - 1);
      }

      function updateMobileDots() {
        const dotsEl = document.getElementById('mobileDots');
        if (!dotsEl) return;

        const state = getProductPageState();
        const images = state && Array.isArray(state.productImages) ? state.productImages : [];
        let total = images.length;
        if (!total) {
          total = {{ product.media.size }};
        }

        if (!total || total <= 1) {
          dotsEl.innerHTML = '';
          return;
        }

        const activeIndex = state && typeof state.currentImageIndex === 'number' ? state.currentImageIndex : 0;

        let html = '';
        for (let i = 0; i < total; i++) {
          const activeClass = i === activeIndex ? 'bg-black' : 'bg-gray-300';
          html += '<span class="inline-block mx-1 ' + activeClass + '" style="width:8px;height:8px;border-radius:2px;"></span>';
        }
        dotsEl.innerHTML = html;
      }

      document.addEventListener('DOMContentLoaded', function () {
