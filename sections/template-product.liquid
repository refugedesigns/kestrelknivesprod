    const tryAttachHoverPause = () => {
      const inst = reviewSwiperEl.swiper;
      if (!inst || !inst.autoplay) return false;
      reviewSwiperEl.addEventListener('mouseenter', () => inst.autoplay.stop());
      reviewSwiperEl.addEventListener('mouseleave', () => inst.autoplay.start());
      return true;
    };

    // If already initialized, attach immediately; otherwise wait for ready
    if (!tryAttachHoverPause()) {
      reviewSwiperEl.addEventListener('ready', tryAttachHoverPause, { once: true });
      // Fallback retry in case ready doesn't fire
      setTimeout(tryAttachHoverPause, 500);
    }
  });
</script>

