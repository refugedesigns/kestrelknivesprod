<script>
  function relatedQuickView() {
    return {
      openState: false,
      loaded: false,
      product: null,
      variants: [],
      optionNames: [],
      sel1: null,
      sel2: null,
      selectedVariantId: null,
      qty: 1,
      image: null,
      get formattedPrice() {
        const v =
          this.variants.find(v => v.id === this.selectedVariantId) ||
          this.variants[0]
        if (!v) return ''
        try {
          return new Intl.NumberFormat('{{ shop.locale }}', {
            style: 'currency',
            currency: '{{ shop.currency }}',
          }).format(v.price / 100)
        } catch (e) {
          return (v.price / 100).toFixed(2)
        }
      },
      async open(handle) {
        this.openState = true
        this.loaded = false
        this.product = null
        this.variants = []
        this.optionNames = []
        this.sel1 = null
        this.sel2 = null
        this.selectedVariantId = null
        this.qty = 1
        this.image = null
        try {
          const res = await fetch(`/products/${handle}.js`)
          const data = await res.json()
          this.product = data
          this.variants = data.variants || []
          try {
            const opts = Array.isArray(data.options) ? data.options : []
            this.optionNames = opts.map(o =>
              typeof o === 'string' ? o : (o && o.name) || ''
            )
          } catch (e) {
            this.optionNames = []
          }
          const first = this.variants.find(v => v.available) || this.variants[0]
          this.selectedVariantId = first ? first.id : null
          this.sel1 = first ? first.option1 : null
          this.sel2 = first ? first.option2 : null
          this.image =
            (first &&
              first.featured_image &&
              (first.featured_image.src || first.featured_image)) ||
            data.featured_image ||
            (data.images && data.images[0]) ||
            null
          this.loaded = true
        } catch (e) {
          console.error('Quick view load failed', e)
        }
      },
      close() {
        const panel = this.$refs && this.$refs.rqvPanel
        if (panel) {
          panel.classList.add('translate-x-full')
          const done = () => {
            this.openState = false
          }
          const onEnd = e => {
            if (e && e.target !== panel) return
            panel.removeEventListener('transitionend', onEnd)
            done()
          }
          panel.addEventListener('transitionend', onEnd)
          setTimeout(() => {
            try {
              panel.removeEventListener('transitionend', onEnd)
            } catch (_) {}
            done()
          }, 320)
        } else {
          this.openState = false
        }
      },
      uniqueOptionValues(index) {
        const key = index === 1 ? 'option1' : 'option2'
        const values = new Set()
        ;(this.variants || []).forEach(v => {
          const val = v[key]
          if (val) values.add(String(val))
        })
        return Array.from(values)
      },
      isColorOption(index) {
        try {
          const name = String(
            (this.optionNames && this.optionNames[index - 1]) || ''
          ).toLowerCase()
          return ['color', 'colour', 'shade', 'finish'].some(k =>
            name.includes(k)
          )
        } catch (e) {
          return false
        }
      },
      imageForOptionValue(index, val) {
        const key = index === 1 ? 'option1' : 'option2'
        const variantWithImage = (this.variants || []).find(
          v =>
            String(v[key] || '') === String(val) &&
            v.featured_image &&
            (v.featured_image.src || v.featured_image)
        )
        if (variantWithImage)
          return (
            variantWithImage.featured_image.src ||
            variantWithImage.featured_image
          )
        return this.image
      },
      isComboAvailable(val1, val2) {
        return !!(this.variants || []).find(v => {
          const ok1 = val1 ? String(v.option1 || '') === String(val1) : true
          const ok2 = val2 ? String(v.option2 || '') === String(val2) : true
          return ok1 && ok2
        })
      },
      updateSelectedVariant() {
        const match = (this.variants || []).find(v => {
          const ok1 = this.sel1
            ? String(v.option1 || '') === String(this.sel1)
            : true
          const ok2 = this.sel2
            ? String(v.option2 || '') === String(this.sel2)
            : true
          return ok1 && ok2
        })
        if (match) {
          this.selectedVariantId = match.id
          if (
            match.featured_image &&
            (match.featured_image.src || match.featured_image)
          ) {
            this.image = match.featured_image.src || match.featured_image
          }
        }
      },
      async addToCart() {
        try {
          const cartSheet = document.querySelector('[x-data*="cartSheet"]')
          if (
            cartSheet &&
            cartSheet._x_dataStack &&
            cartSheet._x_dataStack[0]
          ) {
            await cartSheet._x_dataStack[0].addToCart(
              this.selectedVariantId,
              this.qty
            )
          } else {
            await fetch('/cart/add.js', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({
                id: this.selectedVariantId,
                quantity: this.qty,
              }),
            })
          }
          this.close()
          window.dispatchEvent(new CustomEvent('open-cart'))
        } catch (e) {
          console.error('Quick view addToCart failed', e)
        }
      },
    }
  }
