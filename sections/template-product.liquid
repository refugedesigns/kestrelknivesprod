{% assign selected_variant = product.selected_or_first_available_variant %}
{% assign kk_status_raw = product.metafields.custom.product_status %}
{% assign product_status_text = kk_status_raw.value | default: kk_status_raw %}

<style>
  /* Custom styles for enhanced functionality */
  html {
    scroll-behavior: smooth;
  }

  /* Image transition effects */
  .image-transition {
    transition: opacity 0.3s ease-in-out;
  }

  /* Button hover effects */
  .button-hover-scale {
    transition: transform 0.2s ease-in-out;
  }

  .button-hover-scale:hover {
    transform: scale(1.02);
  }

  .button-hover-scale:active {
    transform: scale(0.98);
  }

  /* Color selection hover effects */
  .color-option {
    transition: all 0.2s ease-in-out;
  }

  .color-option:hover {
    transform: translateY(-2px);
  }

  /* Quantity input styling */
  input[type='number']::-webkit-outer-spin-button,
  input[type='number']::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }

  input[type='number'] {
    -moz-appearance: textfield;
  }

#stickySizeSelector {
  appearance: none !important;
  min-height: 30px !important; /* CRITICAL FIX */
  height: 30px !important;
  line-height: 20px !important;
  padding: 0 14px 0 6px !important;
  font-size: 0.75rem !important;
}



 

  /* Focus states for accessibility */
  button:focus-visible,
  input:focus-visible {
    outline: 2px solid #ff6b35;
    outline-offset: 2px;
  }

  /* Responsive image container */
  .aspect-square {
    aspect-ratio: 1 / 1;
  }

  /* Complex option image stacking */
  .complex-image-canvas {
    position: relative;
    background: #fff;
  }

  .complex-image-canvas img {
    object-fit: contain;
  }

  #complexOverlayContainer {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  #complexOverlayContainer img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .complex-layer-option {
    border: 2px solid #d1d5db;
    border-radius: 0.75rem;
    padding: 0.35rem;
    background: #fff;
    transition: border-color 0.2s ease, transform 0.2s ease, box-shadow 0.2s ease;
  }

  .complex-layer-option.is-active {
    border-color: #111827;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.15);
    transform: translateY(-1px);
  }

  .complex-layer-option img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    border-radius: 0.5rem;
  }


  /* Mobile sticky positioning */
  @media (max-width: 1024px) {
    .mobile-sticky {
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      z-index: 50;
      background: white;
      border-top: 1px solid #e5e7eb;
      border-radius: 16px 16px 0 0;
      box-shadow: 0 -4px 6px -1px rgba(0, 0, 0, 0.1);
    }
  }

  /* Responsive star sizing */
  .review-stars {
    width: {{ section.settings.star_size_mobile | default: 16 }}px;
    height: {{ section.settings.star_size_mobile | default: 16 }}px;
  }

  @media (min-width: 768px) {
    .review-stars {
      width: {{ section.settings.star_size_desktop | default: 20 }}px;
      height: {{ section.settings.star_size_desktop | default: 20 }}px;
    }
  }

  /* Reviews truncation */
  .review-quote {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
    line-height: 1.6;
    transition: all 0.2s ease;
  }
  .review-quote.collapsed {
    -webkit-line-clamp: 3;
  }
  .review-quote.expanded {
    -webkit-line-clamp: unset;
    max-height: none;
  }
  .review-toggle {
    color: #000;
  }

  #thumbnailStrip {
    scrollbar-width: none;
  }

  #thumbnailStrip::-webkit-scrollbar {
    display: none;
  }

  @media (min-width: 768px) {
    #thumbFadeLeft,
    #thumbFadeRight {
      opacity: 0;
      transition: opacity 0.2s ease;
    }

    #thumbFadeLeft.is-visible,
    #thumbFadeRight.is-visible {
      opacity: 1;
    }
  }

</style>

<div class='bg-gray-50 mb-8' x-data='productPage()'>
  <!-- Main Product Section -->
  <div class=''>
    {%- assign tags_lower = product.tags
      | join: "||"
      | downcase
      | split: "||"
    -%}
    {% assign use_local_colors = false %}
    {% if tags_lower contains "use_local_colors" %}
      {% assign use_local_colors = true %}
    {% endif %}
    {% assign use_complex_options = false %}
    {% assign complex_primary_default_value = '' %}
    {% assign complex_primary_default_asset = '' %}
    {% assign complex_base_image_src = product.featured_image | img_url: '2048x2048' %}
{% assign complex_product_token = product.handle
  | strip
  | downcase
  | replace: " ", "_"
  | replace: "-", "_"
  | replace: "/", "_"
  | replace: ".", "_"
  | replace: "__", "_"
  | replace: "__", "_"
%}
    {% if tags_lower contains "use_complex_options" %}
      {% assign use_complex_options = true %}
    {% endif %}
    {% if use_complex_options and product.options_with_values.size > 0 %}
      {% assign complex_primary_option = product.options_with_values.first %}
      {% assign complex_primary_default_value = complex_primary_option.values.first %}
      {% if complex_primary_default_value %}
        {% assign complex_default_variant = product.variants | where: "option1", complex_primary_default_value | first %}
        {% if complex_default_variant %}
          {% assign selected_variant = complex_default_variant %}
        {% endif %}

        {% assign complex_primary_option_token = complex_primary_option.name
          | strip
          | downcase
          | replace: " ", "_"
          | replace: "-", "_"
          | replace: "/", "_"
          | replace: ".", "_"
          | replace: "__", "_"
          | replace: "__", "_"
        %}
        {% assign complex_primary_value_token = complex_primary_default_value
          | strip
          | downcase
          | replace: " ", "_"
          | replace: "-", "_"
          | replace: "/", "_"
          | replace: ".", "_"
          | replace: "__", "_"
          | replace: "__", "_"
        %}
  {% assign complex_primary_asset_filename = 'cmp_'
    | append: complex_product_token
    | append: '_'
    | append: complex_primary_option_token
    | append: '_'
    | append: complex_primary_value_token
    | append: '.png'
  %}
        {% assign complex_primary_default_asset = complex_primary_asset_filename | asset_img_url: '2048x2048' %}
        {% if complex_primary_default_asset != blank %}
          {% assign complex_base_image_src = complex_primary_default_asset %}
        {% endif %}
      {% endif %}
    {% endif %}
    {% if tags_lower contains "hidden_offer" %}
      <div
        class='text-center mb-4 px-6 py-4 rounded-lg flex items-center justify-center'
        style='background-color: {{ section.settings.hidden_offer_title_bg_color | default: "#ffffff" }};'
      >
        <h1
          class='text-2xl md:text-4xl font-bold text-gray-900 mb-4'
          style='color: {{ section.settings.hidden_offer_title_color | default: "#000000" }};'
        >
          {{
            section.settings.hidden_offer_title
            | default: "This Product is Currently Unavailable"
          }}
        </h1>
      </div>
    {% endif %}
    <main class='max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 md:py-8 {% unless tags_lower contains 'hidden_offer' %}md:pt-24{% endunless %}'>
      <div class='lg:grid lg:grid-cols-12 lg:gap-12'>
        <!-- Left Column - Product Images -->
        <div class='lg:col-span-7'>
          <!-- Main Image -->
          {% if use_complex_options %}
            <div class='aspect-square bg-white rounded-lg overflow-hidden mb-6 complex-image-canvas relative' id='complexImageRoot'>
              <img
                id='complexBaseImage'
                src='{{ complex_base_image_src }}'
                alt='{{ product.title | escape }} base layer'
                width='{{ product.featured_image.width | default: 2048 }}'
                height='{{ product.featured_image.height | default: 2048 }}'
                class='w-full h-full'
                data-default-src='{{ complex_base_image_src }}'
              >
              <div id='complexOverlayContainer'></div>
              <button
                type='button'
                x-show='!complexPreviewMode'
                @click='showLayeredPreview()'
                class='absolute top-4 right-4 bg-white/90 hover:bg-white text-xs font-semibold px-3 py-2 rounded-full shadow transition transform hover:scale-[1.02]'
              >
                Return to Custom Preview
              </button>
            </div>
          {% else %}
            <div class='aspect-square bg-white rounded-lg overflow-hidden mb-6 relative group'>
              <img
                id='mainImage'
                src='{{ product.featured_image | img_url: '2048x2048' }}'
                alt='{{ product.title | escape }}'
                width='{{ product.featured_image.width | default: 2048 }}'
                height='{{ product.featured_image.height | default: 2048 }}'
                class='w-full h-full object-contain transition-transform group-hover:scale-105'
              >

              <!-- Magnifying Glass Button -->
              <button
                @click='openGallery()'
                class='absolute top-4 right-4 bg-white/90 hover:bg-white rounded-full p-3 opacity-0 group-hover:opacity-100 transition-opacity shadow-lg'
              >
                <svg
                  class='w-5 h-5'
                  fill='none'
                  stroke='currentColor'
                  viewBox='0 0 24 24'
                >
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"></path>
                </svg>
              </button>

              <!-- Navigation Arrows -->
              <button
                @click='previousImage()'
                class='absolute left-4 top-1/2 -translate-y-1/2 bg-white/90 hover:bg-white rounded-full p-3 opacity-0 group-hover:opacity-100 transition-opacity shadow-lg'
              >
                <svg
                  class='w-5 h-5'
                  fill='none'
                  stroke='currentColor'
                  viewBox='0 0 24 24'
                >
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
              </button>
              <button
                @click='nextImage()'
                class='absolute right-4 top-1/2 -translate-y-1/2 bg-white/90 hover:bg-white rounded-full p-3 opacity-0 group-hover:opacity-100 transition-opacity shadow-lg'
              >
                <svg
                  class='w-5 h-5'
                  fill='none'
                  stroke='currentColor'
                  viewBox='0 0 24 24'
                >
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </button>
            </div>
          {% endif %}

          <!-- Thumbnail Images -->
          <div class='relative hidden md:block'>
            <div
              id='thumbnailStrip'
              class='flex space-x-4 overflow-x-auto pb-2'
            >
              {% for media in product.media %}
                <button
                  @click='changeImage({{ forloop.index0 }})'
                  data-thumb-index='{{ forloop.index0 }}'
                  class='thumbnail flex-shrink-0 w-20 h-20 bg-gray-50 rounded-lg overflow-hidden border-2 transition-colors border-gray-200 hover:border-black'
                  :class="currentImageIndex === {{ forloop.index0 }} ? 'border-black' : 'border-gray-200 hover:border-black'"
                >
                  {% render "product-media", media: media %}
                </button>
              {% endfor %}
            </div>
            <div
              id='thumbFadeLeft'
              class='pointer-events-none absolute left-0 top-0 h-full w-8 bg-gradient-to-r from-white to-transparent'
            ></div>
            <div
              id='thumbFadeRight'
              class='pointer-events-none absolute right-0 top-0 h-full w-8 bg-gradient-to-l from-white to-transparent'
            ></div>
          </div>
            <div class='mt-3 md:hidden flex items-center justify-center space-x-4'>
              <button
                type='button'
                id='mobilePrevBtn'
                class='w-8 h-8 flex items-center justify-center border border-gray-300 rounded-md text-black hover:bg-gray-100 active:bg-gray-200 transition-colors'
              >
                <span class='sr-only'>Previous image</span>
                <svg
                  xmlns='http://www.w3.org/2000/svg'
                  fill='none'
                  viewBox='0 0 24 24'
                  stroke-width='1.5'
                  stroke='currentColor'
                  class='size-6'
                >
                  <path stroke-linecap='round' stroke-linejoin='round' d='M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18'/>
                </svg>
              </button>
              <div class='flex items-center space-x-2' id='mobileDots'></div>
              <button
                type='button'
                id='mobileNextBtn'
                class='w-8 h-8 flex items-center justify-center border border-gray-300 rounded-md text-black hover:bg-gray-100 active:bg-gray-200 transition-colors'
              >
                <span class='sr-only'>Next image</span>
                <svg
                  xmlns='http://www.w3.org/2000/svg'
                  fill='none'
                  viewBox='0 0 24 24'
                  stroke-width='1.5'
                  stroke='currentColor'
                  class='size-6'
                >
                  <path stroke-linecap='round' stroke-linejoin='round' d='M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3'/>
                </svg>
              </button>
            </div>
        </div>

        <!-- Right Column - Product Info -->
        <div class='lg:col-span-5 mt-8 lg:mt-0'>
          <div class='lg:sticky lg:top-24'>
            <!-- Product Title -->
            <h1 class='text-4xl font-bold text-gray-900 mb-6'>
              {{ product.title }}
            </h1>

            {% form "product",
              product,
              id: "product-form",
              novalidate: "novalidate"
            %}
              <input
                type='hidden'
                name='id'
                id='variantIdInput'
                value='{{ selected_variant.id }}'
              >

              <!-- Price -->
              <div class='mb-8'>
                <span id='price' class='text-3xl font-bold text-gray-900'>
                  {{- selected_variant.price | money -}}
                </span>
                <span
                  id='comparePrice'
                  class='text-lg text-gray-500 line-through ml-2'
                  style='display: {% if selected_variant.compare_at_price > selected_variant.price %}inline-block{% else %}none{% endif %};'
                >
                  {{- selected_variant.compare_at_price | money -}}
                </span>
                <span
                  id='saleBadge'
                  class='px-3 py-1 text-sm font-bold bg-red-500 rounded-full text-white ml-4'
                  style='display: {% if selected_variant.compare_at_price > selected_variant.price %}inline-block{% else %}none{% endif %};'
                  >Sale</span
                >
                <div id='availability' class='mt-1 text-sm text-gray-600'></div>
              </div>

              <!-- Insert the Shop Pay installments banner if available -->
              <div class='mb-6'>
                <p class='text-md text-gray-500'>
                  {{ form | payment_terms }}
                </p>
              </div>

              <!--
                Dynamic Variant Options (supports Knives, Apparel, Accessories)
              -->
              {% unless product.has_only_default_variant %}
                {% for option in product.options_with_values %}
                  {% assign option_name_downcase = option.name
                    | downcase
                    | strip
                  %}
                  {% assign option_position = forloop.index %}
                  {% assign option_index0 = option_position | minus: 1 %}
                  {% assign is_complex_primary = false %}
                  {% assign is_complex_overlay = false %}
                  {% if use_complex_options %}
                    {% if option_position == 1 %}
                      {% assign is_complex_primary = true %}
                    {% elsif option_position > 1 %}
                      {% assign is_complex_overlay = true %}
                    {% endif %}
                  {% endif %}

                  <div class='mb-6'>
                    <h3 class='text-lg font-semibold mb-3'>
                      {{ option.name }}
                    </h3>

                    {% comment %}
                      Determine renderer by option name:
                      - color-like: color/colour/handle/colourway → swatches with images
                      - size-like: size → text square buttons
                      - default: text buttons
                    {% endcomment %}

                    {% if is_complex_overlay %}
                      <div
                        class='grid grid-cols-5 gap-3'
                        data-complex-option-wrapper='{{ option_index0 }}'
                      >
                        {% for value in option.values %}
                          {% assign local_option_token = option.name
                            | strip
                            | handleize
                            | replace: "-", "_"
                          %}
                          {% assign local_value_token = value
                            | strip
                            | handleize
                            | replace: "-", "_"
                          %}
                          {% assign local_asset_filename = local_option_token
                            | append: "_"
                            | append: local_value_token
                            | append: ".png"
                          %}
                          {% assign local_asset_thumb = local_asset_filename | asset_img_url: '256x256' %}
                          {% assign complex_option_token = option.name
                            | strip
                            | downcase
                            | replace: " ", "_"
                            | replace: "-", "_"
                            | replace: "/", "_"
                            | replace: ".", "_"
                            | replace: "__", "_"
                            | replace: "__", "_"
                          %}
                          {% assign complex_value_token = value
                            | strip
                            | downcase
                            | replace: " ", "_"
                            | replace: "-", "_"
                            | replace: "/", "_"
                            | replace: ".", "_"
                            | replace: "__", "_"
                            | replace: "__", "_"
                          %}
                          {% assign complex_asset_filename = 'cmp_'
                            | append: complex_product_token
                            | append: '_'
                            | append: complex_option_token
                            | append: '_'
                            | append: complex_value_token
                            | append: '.png'
                          %}
                          {% assign complex_asset_large = complex_asset_filename | asset_img_url: '2048x2048' %}
                          {% assign complex_asset_thumb = complex_asset_filename | asset_img_url: '256x256' %}

                          <div class='flex flex-col items-center'>
                            <button
                              type='button'
                              class='complex-layer-option w-full aspect-square flex items-center justify-center'
                              data-complex-option-button
                              data-complex-option-index='{{ option_index0 }}'
                              data-option-name='{{ option.name | escape }}'
                              data-option-value='{{ value | escape }}'
                              data-asset='{{ complex_asset_large }}'
                              aria-pressed='false'
                            >
                              {% if use_local_colors and local_asset_thumb != blank %}
                                <img
                                  src='{{ local_asset_thumb }}'
                                  alt='{{ value | escape }}'
                                >
                              {% elsif complex_asset_thumb != blank %}
                                <img
                                  src='{{ complex_asset_thumb }}'
                                  alt='{{ value | escape }}'
                                >
                              {% else %}
                                <span class='text-xs font-semibold text-gray-800'>
                                  {{ value | upcase }}
                                </span>
                              {% endif %}
                            </button>
                            <span class='text-xs text-center block mt-1 font-medium text-gray-900'>
                              {{ value | upcase }}
                            </span>
                          </div>
                        {% endfor %}
                      </div>

                    {% elsif option_name_downcase contains "color"
                      or option_name_downcase contains "colour"
                      or option_name_downcase contains "handle"
                      or option_name_downcase contains "colourway"
                      or option_name_downcase contains "model"
                    %}
                      <div class='grid grid-cols-5 gap-3'>
                        {% for value in option.values %}
                          {% assign is_selected = false %}
                          {% if is_complex_primary %}
                            {% if forloop.first %}
                              {% assign is_selected = true %}
                            {% endif %}
                          {% elsif option.selected_value == value %}
                            {% unless use_complex_options %}
                              {% assign is_selected = true %}
                            {% endunless %}
                          {% endif %}

                          {% assign option_image = null %}
                          {% unless use_local_colors %}
                            {% for variant in product.variants %}
                              {% if option_position == 1
                                and variant.option1 == value
                              %}
                                {% if variant.featured_image -%}
                                  {%- assign option_image = variant.featured_image -%}
                                {%- endif %}
                              {% elsif option_position == 2
                                and variant.option2 == value
                              %}
                                {% if variant.featured_image -%}
                                  {%- assign option_image = variant.featured_image -%}
                                {%- endif %}
                              {% elsif option_position == 3
                                and variant.option3 == value
                              %}
                                {% if variant.featured_image -%}
                                  {%- assign option_image = variant.featured_image -%}
                                {%- endif %}
                              {% endif %}
                              {% if option_image %}{% break %}{% endif %}
                            {% endfor %}
                          {% endunless %}
                          {% assign complex_option_token = option.name
                            | strip
                            | downcase
                            | replace: " ", "_"
                            | replace: "-", "_"
                            | replace: "/", "_"
                            | replace: ".", "_"
                            | replace: "__", "_"
                            | replace: "__", "_"
                          %}
                          {% assign complex_value_token = value
                            | strip
                            | downcase
                            | replace: " ", "_"
                            | replace: "-", "_"
                            | replace: "/", "_"
                            | replace: ".", "_"
                            | replace: "__", "_"
                            | replace: "__", "_"
                          %}
                          {% assign complex_asset_filename = 'cmp_'
                            | append: complex_product_token
                            | append: '_'
                            | append: complex_option_token
                            | append: '_'
                            | append: complex_value_token
                            | append: '.png'
                          %}
                          {% assign complex_asset_large = complex_asset_filename | asset_img_url: '2048x2048' %}
                          {% assign complex_asset_thumb = complex_asset_filename | asset_img_url: '128x128' %}

                          <label class='relative cursor-pointer color-option'>
                            <input
                              type='radio'
                              name='options[{{ option.name }}]'
                              value='{{ value | escape }}'
                              class='sr-only'
                              data-option-index='{{ option_index0 }}'
                              data-option-value='{{ value | escape }}'
                              {% if is_complex_primary %}
                                data-complex-asset='{{ complex_asset_large }}'
                              {% endif %}
                              {% if is_selected %}
                                checked
                              {% endif %}
                            >
                            <div class='w-full aspect-square border-2 {% if is_selected %}border-black{% else %}border-gray-300 hover:border-black{% endif %} rounded-lg p-2 bg-white hover:bg-gray-100 transition-colors'>
                              {% if use_local_colors %}
                                {% assign option_name_token = option.name
                                  | strip
                                  | handleize
                                  | replace: "-", "_"
                                %}
                                {% assign option_value_token = value
                                  | strip
                                  | handleize
                                  | replace: "-", "_"
                                %}
                                {% assign option_asset_filename = option_name_token
                                  | append: "_"
                                  | append: option_value_token
                                  | append: ".png"
                                %}
                                <img
                                  src='{{ option_asset_filename | asset_img_url: '64x64' }}'
                                  alt='{{ value }}'
                                  class='w-full h-full object-contain rounded-md'
                                  width='64'
                                  height='64'
                                >
                              {% elsif use_complex_options and complex_asset_thumb != blank %}
                                <img
                                  src='{{ complex_asset_thumb }}'
                                  alt='{{ value }}'
                                  class='w-full h-full object-contain rounded-md'
                                  width='64'
                                  height='64'
                                >
                              {% elsif option_image %}
                                <img
                                  src='{{ option_image | image_url: width: 64 }}'
                                  alt='{{ value }}'
                                  class='w-full h-full object-contain rounded-md'
                                  width='64'
                                  height='64'
                                >
                              {% else %}
                                <div class='w-full h-full bg-white rounded-md flex items-center justify-center'>
                                  <span class='text-gray-600 text-xs'>
                                    {{- value | escape -}}
                                  </span>
                                </div>
                              {% endif %}
                            </div>
                            <span class='text-xs text-center block mt-1 font-medium {% if is_selected %}text-black{% endif %}'>
                              {{- value | upcase -}}
                            </span>
                          </label>
                        {% endfor %}
                      </div>

                    {% elsif option_name_downcase contains "size" %}
                      <div class='flex flex-wrap gap-2'>
                        {% for value in option.values %}
                          {% assign is_selected = false %}
                          {% if is_complex_primary %}
                            {% if forloop.first %}
