<style>
  /* Responsive logo sizing */
  @media (min-width: 768px) {
    .header-logo {
      height: {{ section.settings.logo_height_desktop | default: 80 }}px !important;
    }
  }

  /* Child menu link hover styles */
  .child-menu-link {
    transition: background-color 0.2s ease, color 0.2s ease;
  }
  .child-menu-link:hover {
    background-color: {{ section.settings.child_menu_hover_bg_color | default: "#374151" }} !important;
  }
  .child-menu-link:hover p {
    color: {{ section.settings.child_menu_hover_text_color | default: "#ffffff" }} !important;
  }
</style>

<div
  id='siteHeader'
  class='fixed w-full z-20 top-0 start-0'
  x-data='{ mobileMenuOpen: false, searchBarOpen: false }'
  x-cloak
  style='background-color: {{ section.settings.header_bg_color | default: "#000000" }}; {% if section.settings.header_border_bottom %}border-bottom: 1px solid {{ section.settings.header_border_color | default: "#ffffff" }};{% endif %}'
>
  <div class='mx-auto px-4 sm:px-6 max-w-8xl'>
    <div class='flex justify-between items-center py-2 md:justify-start md:space-x-10'>
      <!-- STORE NAME / STORE LOGO -->
      <div class='flex justify-start lg:flex-1 truncate'>
        {% assign logo_image = section.settings.logo_image %}
        {% if logo_image == blank and shop.brand_asset_default_logo %}
          {% assign logo_image = shop.brand_asset_default_logo %}
        {% endif %}
        {% if logo_image != blank %}
          <a href='{{ routes.root_url }}' class='flex items-center space-x-3'>
            <img
              src='{{ logo_image | img_url: "master" }}'
              style='height: {{ section.settings.logo_height_mobile | default: 32 }}px;'
              class='header-logo md:h-auto'
              alt='{{ shop.name }} Logo'
            >
          </a>
        {% else %}
          <a href='{{ routes.root_url }}' class='flex items-center space-x-3'>
            <img
              src='{{ "logo_white.png" | asset_url }}'
              style='height: {{ section.settings.logo_height_mobile | default: 32 }}px;'
              class='header-logo md:h-auto'
              alt='{{ shop.name }} Logo'
            >
          </a>
        {% endif %}
      </div>

      <div class='-mr-2 -my-2 ml-3 md:hidden'>
        <button
          x-on:click='mobileMenuOpen = true'
          type='button'
          class='p-2 inline-flex items-center justify-center focus:outline-none'
          style='color: {{ section.settings.mobile_menu_button_color | default: "#ffffff" }};'
        >
          {% render "icon-menu" %}
        </button>
      </div>
      <!-- NAVIGATION MENU -->
      <nav
        class='hidden md:flex space-x-10'
        @click.away='mobileMenuOpen = false'
      >
        {% if section.settings.menu.links == blank %}
          {% assign main_menu_linklist = linklists[section.settings.menu].links %}
        {% else %}
          {% assign main_menu_linklist = section.settings.menu.links %}
        {% endif %}
        {% for link in main_menu_linklist %}
          {% if link.links != blank %}
            {% assign link_handle = link.handle | replace: "-", "_" %}
            <div class='relative' x-data='{ {{ link_handle }}: false }'>
              <button
                type='button'
                x-on:click='{{ link_handle }} = ! {{ link_handle }}'
                class='inline-flex items-center cursor-pointer hover:text-gray-100'
                style='color: {{ section.settings.menu_link_color | default: "#ffffff" }};'
              >
                {{ link.title }}
                {% render "icon-dropdown" %}
              </button>

              <div
                x-transition:enter='transition ease-out duration-300'
                x-transition:enter-start='opacity-0 translate-y-3'
                x-transition:enter-end='opacity-100 translate-y-0'
                x-transition:leave='transition ease-out duration-300'
                x-transition:leave-start='opacity-100 translate-y-0'
                x-transition:leave-end='opacity-0 translate-y-3'
                x-show='{{ link_handle }}'
                @click.away='{{ link_handle }} = false'
                class='absolute z-10 -ml-5 mt-5 transform px-2 w-screen max-w-md sm:px-0 lg:ml-0 lg:left-1/2 lg:-translate-x-1/2'
              >
                <div
                  class='shadow-lg border ring-opacity-5 overflow-hidden rounded-lg'
                  style='border-color: {{ section.settings.child_menu_border_color | default: "#000000" }}; --tw-ring-color: {{ section.settings.child_menu_border_color | default: "#000000" }};'
                >
                  <div
                    class='relative grid gap-6 px-5 py-6 sm:gap-8 sm:p-8'
                    style='background-color: {{ section.settings.child_menu_bg_color | default: "#1f2937" }};'
                  >
                    {% for childlink in link.links %}
                      <a
                        href='{{ childlink.url }}'
                        class='-m-3 p-3 flex items start rounded-lg child-menu-link'
                      >
                        <div class='ml-4'>
                          <p
                            class='text-base font-medium'
                            style='color: {{ section.settings.child_menu_link_color | default: "#ffffff" }};'
                          >
                            {{ childlink.title }}
                          </p>
                        </div>
                      </a>
                    {% endfor %}
                  </div>
                </div>
              </div>
            </div>
          {% else %}
            <a
              href='{{ link.url }}'
              class='text-base hover:text-gray-100'
              style='color: {{ section.settings.menu_link_color | default: "#ffffff" }};'
            >
              {{- link.title -}}
            </a>
          {% endif %}
        {% endfor %}
      </nav>
      <!-- CART BUTTON / ACCOUNT LINKS IF ENABLED -->
      <div class='hidden md:flex items-center justify-end md:flex-1 space-x-5'>
        <button
          @click='window.dispatchEvent(new CustomEvent("open-search"))'
          type='button'
          class='whitespace-nowrap text-base hover:text-gray-100'
          style='color: {{ section.settings.menu_link_color | default: "#ffffff" }};'
        >
          {% render "icon-search" %}
        </button>
        <div class='relative' x-data='cartBadge()' x-init='init()'>
          <button
            @click.stop='openCart'
            class='whitespace-nowrap text-base hover:text-gray-100 relative'
            style='color: {{ section.settings.menu_link_color | default: "#ffffff" }};'
          >
            {% render "icon-shopping-bag" %}
            <!-- Cart Badge -->
            <span
              x-show='itemCount > 0'
              x-text='itemCount'
              class='absolute -top-2 -right-2 text-xs rounded-full h-5 w-5 flex items-center justify-center font-bold'
              style='background-color: {{ section.settings.cart_badge_bg_color | default: "#ffffff" }}; color: {{ section.settings.cart_badge_text_color | default: "#000000" }};'
            ></span>
          </button>
        </div>

        {% if shop.customer_accounts_enabled %}
          {% if customer %}
            <a
              href='{{ routes.account_url }}'
              class='text-base hover:text-gray-100'
              style='color: {{ section.settings.menu_link_color | default: "#ffffff" }};'
              >Account</a
            >
            <a
              href='{{ routes.account_logout_url }}'
              class='text-base hover:text-gray-100'
              style='color: {{ section.settings.menu_link_color | default: "#ffffff" }};'
              >Log out</a
            >
          {% else %}
            <a
              href='{{ routes.account_login_url }}'
              class='text-base hover:text-gray-100'
              style='color: {{ section.settings.menu_link_color | default: "#ffffff" }};'
              >Log in</a
            >
            <a
              href='{{ routes.account_register_url }}'
              class='text-base hover:text-gray-100'
              style='color: {{ section.settings.menu_link_color | default: "#ffffff" }};'
              >Register</a
            >
          {% endif %}
        {% endif %}
      </div>

      <!-- MOBILE MENU CONTAINER -->
      <div
        x-show='mobileMenuOpen'
        @click.away='mobileMenuOpen = false'
        class='absolute z-10 top-0 inset-x-0 p-2 transform origin-top-left md:hidden'
      >
        <div
          class='shadow-lg rounded-lg ring-1 ring-black ring-opacity-5 w-full'
          style='background-color: {{ section.settings.mobile_menu_bg_color | default: "#1f2937" }};'
        >
          <div
            class='p-5 divide-y-2'
            style='border-color: {{ section.settings.mobile_menu_border_color | default: "#374151" }};'
          >
            <!-- MOBILE MENU HEADER TITLE PLUS CLOSE BUTTON -->

            <div class='flex items-center justify-between pb-3'>
              <div>
                <h1
                  class='text-lg'
                  style='color: {{ section.settings.mobile_menu_title_color | default: "#ffffff" }};'
                >
                  {{ section.settings.mobile_menu_title }}
                </h1>
              </div>
              <div class='-mr-2'>
                <button
                  x-on:click='mobileMenuOpen = false'
                  type='button'
                  class='rounded-md p-2'
                  style='background-color: {{ section.settings.mobile_menu_close_button_bg_color | default: "#1f2937" }}; color: {{ section.settings.mobile_menu_close_button_color | default: "#ffffff" }};'
                >
                  {% render "icon-close" %}
                </button>
              </div>
            </div>

            <!-- NAVIGATION LINKS FOR MOBILE MENU -->
            <div class='pt-3'>
              <nav class='grid gap-y-7'>
                {% if section.settings.menu.links == blank %}
                  {% assign main_menu_linklist = linklists[section.settings.menu].links %}
                {% else %}
                  {% assign main_menu_linklist = section.settings.menu.links %}
                {% endif %}
                {% for link in main_menu_linklist %}
                  {% if link.links != blank %}
                    {% assign mobile_link_handle = link.handle
                      | replace: "-", "_"
                    %}
                    <div
                      class='relative'
                      x-data='{ {{ mobile_link_handle }}: false }'
                    >
                      <button
                        x-on:click='{{ mobile_link_handle }} = ! {{ mobile_link_handle }}'
                        type='button'
                        class='text-base flex items-center justify-between w-full'
                        style='color: {{ section.settings.mobile_menu_link_color | default: "#ffffff" }};'
                      >
                        <div>{{ link.title }}</div>
                        {% render "icon-dropdown" %}
                      </button>

                      <div
                        x-show='{{ mobile_link_handle }}'
                        class='grid gap-y-2 py-3'
                      >
                        {% for childlink in link.links %}
                          <a
                            href='{{ childlink.url }}'
                            class='-m-3 p-3 mt-2 flex items-center rounded-md'
                            style='color: {{ section.settings.mobile_menu_link_color | default: "#ffffff" }}; transition: background-color 0.2s ease, color 0.2s ease;'
                            onmouseover='this.style.backgroundColor="{{ section.settings.mobile_menu_link_hover_bg_color | default: "#374151" }}"; this.style.color="{{ section.settings.mobile_menu_link_hover_text_color | default: "#ffffff" }}"'
                            onmouseout='this.style.backgroundColor="transparent"; this.style.color="{{ section.settings.mobile_menu_link_color | default: "#ffffff" }}"'
                          >
                            <span class='ml-3 text-base font-medium'>
                              {{- childlink.title -}}
                            </span>
                          </a>
                        {% endfor %}
                      </div>
                    </div>
                  {% else %}
                    <a
                      href='{{ link.url }}'
                      class='-m-3 p-3 flex items-center rounded-md'
                      style='color: {{ section.settings.mobile_menu_link_color | default: "#ffffff" }}; transition: background-color 0.2s ease, color 0.2s ease;'
                      onmouseover='this.style.backgroundColor="{{ section.settings.mobile_menu_link_hover_bg_color | default: "#374151" }}"; this.style.color="{{ section.settings.mobile_menu_link_hover_text_color | default: "#ffffff" }}"'
                      onmouseout='this.style.backgroundColor="transparent"; this.style.color="{{ section.settings.mobile_menu_link_color | default: "#ffffff" }}"'
                    >
                      {{ link.title }}
                    </a>
                  {% endif %}
                {% endfor %}

                <!-- Mobile Menu Actions -->
                <div
                  class='border-t pt-4'
                  style='border-color: {{ section.settings.mobile_menu_border_color | default: "#374151" }};'
                >
                  <!-- Search -->
                  <button
                    @click='window.dispatchEvent(new CustomEvent("open-search")); mobileMenuOpen = false'
                    class='-m-3 p-3 flex items-center rounded-md w-full text-left'
                    style='color: {{ section.settings.mobile_menu_link_color | default: "#ffffff" }}; transition: background-color 0.2s ease, color 0.2s ease;'
                    onmouseover='this.style.backgroundColor="{{ section.settings.mobile_menu_link_hover_bg_color | default: "#374151" }}"; this.style.color="{{ section.settings.mobile_menu_link_hover_text_color | default: "#ffffff" }}"'
                    onmouseout='this.style.backgroundColor="transparent"; this.style.color="{{ section.settings.mobile_menu_link_color | default: "#ffffff" }}"'
                  >
                    Search
                  </button>

                  <!-- Cart -->
                  <button
                    @click='window.dispatchEvent(new CustomEvent("open-cart")); mobileMenuOpen = false'
                    class='-m-3 p-3 flex items-center rounded-md w-full text-left'
                    style='color: {{ section.settings.mobile_menu_link_color | default: "#ffffff" }}; transition: background-color 0.2s ease, color 0.2s ease;'
                    onmouseover='this.style.backgroundColor="{{ section.settings.mobile_menu_link_hover_bg_color | default: "#374151" }}"; this.style.color="{{ section.settings.mobile_menu_link_hover_text_color | default: "#ffffff" }}"'
                    onmouseout='this.style.backgroundColor="transparent"; this.style.color="{{ section.settings.mobile_menu_link_color | default: "#ffffff" }}"'
                  >
                    Cart
                  </button>

                  <!-- Account Links -->
                  {% if shop.customer_accounts_enabled %}
                    {% if customer %}
                      <a
                        href='{{ routes.account_url }}'
                        class='-m-3 p-3 flex items-center rounded-md'
                        style='color: {{ section.settings.mobile_menu_link_color | default: "#ffffff" }}; transition: background-color 0.2s ease, color 0.2s ease;'
                        onmouseover='this.style.backgroundColor="{{ section.settings.mobile_menu_link_hover_bg_color | default: "#374151" }}"; this.style.color="{{ section.settings.mobile_menu_link_hover_text_color | default: "#ffffff" }}"'
                        onmouseout='this.style.backgroundColor="transparent"; this.style.color="{{ section.settings.mobile_menu_link_color | default: "#ffffff" }}"'
                      >
                        Account
                      </a>
                      <a
                        href='{{ routes.account_logout_url }}'
                        class='-m-3 p-3 flex items-center rounded-md'
                        style='color: {{ section.settings.mobile_menu_link_color | default: "#ffffff" }}; transition: background-color 0.2s ease, color 0.2s ease;'
                        onmouseover='this.style.backgroundColor="{{ section.settings.mobile_menu_link_hover_bg_color | default: "#374151" }}"; this.style.color="{{ section.settings.mobile_menu_link_hover_text_color | default: "#ffffff" }}"'
                        onmouseout='this.style.backgroundColor="transparent"; this.style.color="{{ section.settings.mobile_menu_link_color | default: "#ffffff" }}"'
                      >
                        Log out
                      </a>
                    {% else %}
                      <a
                        href='{{ routes.account_login_url }}'
                        class='-m-3 p-3 flex items-center rounded-md'
                        style='color: {{ section.settings.mobile_menu_link_color | default: "#ffffff" }}; transition: background-color 0.2s ease, color 0.2s ease;'
                        onmouseover='this.style.backgroundColor="{{ section.settings.mobile_menu_link_hover_bg_color | default: "#374151" }}"; this.style.color="{{ section.settings.mobile_menu_link_hover_text_color | default: "#ffffff" }}"'
                        onmouseout='this.style.backgroundColor="transparent"; this.style.color="{{ section.settings.mobile_menu_link_color | default: "#ffffff" }}"'
                      >
                        Log in
                      </a>
                      <a
                        href='{{ routes.account_register_url }}'
                        class='-m-3 p-3 flex items-center rounded-md'
                        style='color: {{ section.settings.mobile_menu_link_color | default: "#ffffff" }}; transition: background-color 0.2s ease, color 0.2s ease;'
                        onmouseover='this.style.backgroundColor="{{ section.settings.mobile_menu_link_hover_bg_color | default: "#374151" }}"; this.style.color="{{ section.settings.mobile_menu_link_hover_text_color | default: "#ffffff" }}"'
                        onmouseout='this.style.backgroundColor="transparent"; this.style.color="{{ section.settings.mobile_menu_link_color | default: "#ffffff" }}"'
                      >
                        Register
                      </a>
                    {% endif %}
                  {% endif %}
                </div>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Search Sheet -->
  {% render "search-sheet" %}
</div>

<script>
  function cartBadge() {
    return {
      itemCount: 0,

      init() {
        this.loadCartCount()

        // Listen for cart updates
        window.addEventListener('cart-updated', () => {
          this.loadCartCount()
        })
      },

      async loadCartCount() {
        try {
          const response = await fetch('/cart.js')
          const cart = await response.json()
          this.itemCount = cart.item_count
        } catch (error) {
          console.error('Error loading cart count:', error)
        }
      },

      openCart() {
        // Dispatch event to open cart sheet
        window.dispatchEvent(new CustomEvent('open-cart'))
      },
    }
  }
</script>

