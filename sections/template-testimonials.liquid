          class='testimonials-carousel'
          pagination='true'
          pagination-clickable='true'
          navigation='false'
          space-between='20'
          slides-per-view='1'
          centered-slides='true'
          autoplay='true'
          autoplay-delay='5000'
          autoplay-disable-on-interaction='false'
          loop='false'
