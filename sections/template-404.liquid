<div class='max-w-md'>
  <div class='text-5xl font-bold my-4'>{{ section.settings.title }}</div>

  <div class='text-lg'>
    <p class='text-center text-base md:text-xl leading-normal'>
      {{ section.settings.subtext }}
    </p>
  </div>
  <div class='my-4'>
    {% if section.settings.button_url == blank %}
      {% assign button_url = routes.root_url %}
    {% else %}
      {% assign button_url = section.settings.button_url %}
    {% endif %}
    <a href='{{button_url}}' class='text-base font-medium shadow bg-green-500 rounded-md text-white p-2'>
      {{ section.settings.button_text }}
    </a>
  </div>
</div>

{% schema %}
{
  "name": "Template 404",
  "tag": "section",
  "class": "flex text-center py-10 items-center justify-center h-screen",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "404 Heading Title",
      "default": "404",
      "info": "This title will be displayed in the 404 page"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Subtext",
      "default": "The page you were looking for does not exist",
      "info": "This subtext will be displayed in the 404 page"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Return to homepage",
      "info": "This button text will be displayed in the 404 page"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL",
      "info": "This button URL will be displayed in the 404 page"
    }
  ]
}
{% endschema %}
