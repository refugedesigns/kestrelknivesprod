<div
  class='min-h-screen flex'
  x-data='{ loginForm: true, pwRecoverForm: false }'
>
  <!-- Left Side - Image -->
  <div class='hidden lg:flex lg:w-1/2 relative'>
    <img
      src='{{ "login.webp" | asset_url }}'
      alt='Login background'
      class='w-full h-full object-cover'
    >
    <!-- Overlay content -->
    <div class='absolute inset-0 bg-black/20 flex flex-col justify-between p-8'>
      <!-- Top content -->
      <div class='flex justify-between items-start'>
        <div class='text-white'>
          <h2 class='text-2xl font-bold mb-2'>
            Welcome to {{ section.settings.shop_name }}
          </h2>
          <p class='text-lg opacity-90'>
            Join our community of knife enthusiasts
          </p>
        </div>
      </div>

      <!-- Bottom content -->
      <div class='text-white'>
        <div class='flex items-center mb-4'>
          <div class='w-8 h-8 bg-white bg-opacity-20 rounded-full flex items-center justify-center mr-3'>
            <svg class='w-5 h-5' fill='currentColor' viewBox='0 0 20 20'>
              <path d='M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z'/>
            </svg>
          </div>
          <span class='text-lg font-medium'>Premium Knife Community</span>
        </div>
        <blockquote class='text-xl italic'>
          "Craftsmanship that cuts through the ordinary"
        </blockquote>
      </div>
    </div>
  </div>

  <!-- Right Side - Login Form -->
  <div class='w-full lg:w-1/2 flex items-center justify-center px-6 py-12'>
    <div class='w-full max-w-md'>
      <!-- Brand Logo/Name -->
      <div class='text-center mb-8'>
        <a href='{{ routes.root_url }}' class='inline-block'>
          {% if section.settings.logo_image
            and section.settings.logo_image != blank
          %}
            <img
              src='{{ section.settings.logo_image | image_url: width: 200 }}'
              alt='{{ section.settings.shop_name }} Logo'
              class='h-20 mx-auto'
              width='200'
              height='80'
            >
          {% else %}
            <h1 class='text-3xl font-bold text-gray-900'>
              {{ section.settings.shop_name }}
            </h1>
          {% endif %}
        </a>

        <!-- Debug Information -->
        <div class='text-xs text-gray-500 mt-2'>
          <p>Logo Image: {{ section.settings.logo_image }}</p>
          <p>Shop Name: {{ section.settings.shop_name }}</p>
          <p>Section ID: {{ section.id }}</p>
          <p>All Settings: {{ section.settings | json }}</p>
        </div>
      </div>

      <!-- Login Form -->
      <div x-show='loginForm'>
        <div class='mb-8'>
          <h2 class='text-2xl font-bold text-gray-900 mb-2'>Hi there!</h2>
          <p class='text-gray-600'>
            Welcome to {{ section.settings.shop_name }} Community Dashboard
          </p>
        </div>

        {% form "customer_login" %}
          {% if form.errors %}
            <div class='mb-4 p-4 bg-red-50 border border-red-200 rounded-md'>
              <div class='flex'>
                <div class='flex-shrink-0'>
                  <svg
                    class='h-5 w-5 text-red-400'
                    viewBox='0 0 20 20'
                    fill='currentColor'
                  >
                    <path fill-rule='evenodd' d='M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z' clip-rule='evenodd'/>
                  </svg>
                </div>
                <div class='ml-3'>
                  <h3 class='text-sm font-medium text-red-800'>Error!</h3>
                  <div class='mt-2 text-sm text-red-700'>
                    {{ form.errors | default_errors }}
                  </div>
                </div>
              </div>
            </div>
          {% endif %}

          <div class='space-y-4'>
            <div>
              <label
                for='email_address'
                class='block text-sm font-medium text-gray-700 mb-1'
              >
                Your email
              </label>
              <input
                type='email'
                name='customer[email]'
                id='email_address'
                autocomplete='email'
                class='w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-black focus:border-black'
                placeholder='Enter your email'
                required
              >
            </div>

            {% if form.password_needed %}
              <div>
                <label
                  for='password'
                  class='block text-sm font-medium text-gray-700 mb-1'
                >
                  Password
                </label>
                <input
                  type='password'
                  name='customer[password]'
                  id='password'
                  autocomplete='current-password'
                  class='w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-black focus:border-black'
                  placeholder='Enter your password'
                  required
                >
              </div>
            {% endif %}

            <div class='flex justify-end'>
              <button
                type='button'
                x-on:click='loginForm = false; pwRecoverForm = true'
                class='text-sm text-blue-600 hover:text-blue-500'
              >
                Forgot password?
              </button>
            </div>

            <button
              type='submit'
              class='w-full bg-black text-white py-3 px-4 rounded-md hover:bg-gray-800 transition-colors font-medium'
            >
              Log In
            </button>
          </div>
        {% endform %}

        <!-- Sign Up Link -->
        <div class='mt-6 text-center'>
          <p class='text-sm text-gray-600'>
            Don't have an account?
            <a
              href='{{ routes.account_register_url }}'
              class='text-blue-600 hover:text-blue-500 font-medium'
            >
              Sign up
            </a>
          </p>
        </div>

        <!-- Guest Checkout -->
        {% if shop.checkout.guest_login %}
          <div class='mt-8 pt-6 border-t border-gray-200'>
            <div class='text-center'>
              <h3 class='text-lg font-medium text-gray-900 mb-4'>
                Continue as a guest
              </h3>
              {% form "guest_login" %}
                <button
                  type='submit'
                  class='w-full border border-gray-300 text-gray-700 py-3 px-4 rounded-md hover:bg-gray-50 transition-colors font-medium'
                >
                  Continue as Guest
                </button>
              {% endform %}
            </div>
          </div>
        {% endif %}
      </div>

      <!-- Password Recovery Form -->
      <div x-show='pwRecoverForm'>
        <div class='mb-8'>
          <h2 class='text-2xl font-bold text-gray-900 mb-2'>
            Recover your password
          </h2>
          <p class='text-gray-600'>
            Enter your email address and we'll send you a link to reset your
            password.
          </p>
        </div>

        {% form "recover_customer_password" %}
          {% if form.errors %}
            <div class='mb-4 p-4 bg-red-50 border border-red-200 rounded-md'>
              <div class='flex'>
                <div class='flex-shrink-0'>
                  <svg
                    class='h-5 w-5 text-red-400'
                    viewBox='0 0 20 20'
                    fill='currentColor'
                  >
                    <path fill-rule='evenodd' d='M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z' clip-rule='evenodd'/>
                  </svg>
                </div>
                <div class='ml-3'>
                  <h3 class='text-sm font-medium text-red-800'>Error!</h3>
                  <div class='mt-2 text-sm text-red-700'>
                    {{ form.errors | default_errors }}
                  </div>
                </div>
              </div>
            </div>
          {% endif %}

          <div class='space-y-4'>
            <div>
              <label
                for='email'
                class='block text-sm font-medium text-gray-700 mb-1'
              >
                Email address
              </label>
              <input
                type='email'
                name='email'
                id='email'
                autocomplete='email'
                class='w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-black focus:border-black'
                placeholder='Enter your email'
                required
              >
            </div>

            <button
              type='submit'
              class='w-full bg-black text-white py-3 px-4 rounded-md hover:bg-gray-800 transition-colors font-medium'
            >
              Recover password
            </button>
          </div>
        {% endform %}

        <div class='mt-6 text-center'>
          <button
            type='button'
            x-on:click='loginForm = true; pwRecoverForm = false'
            class='text-sm text-blue-600 hover:text-blue-500'
          >
            ‚Üê Back to login
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Customer Login",
  "settings": [
    {
      "type": "text",
      "id": "shop_name",
      "label": "Shop Name",
      "default": "Kestrel Knives"
    },
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo Image"
    }
  ],
  "presets": [
    {
      "name": "Customer Login",
      "settings": {
        "shop_name": "Kestrel Knives"
      }
    }
  ]
}
{% endschema %}
