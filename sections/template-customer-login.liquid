<div
  class='min-h-screen bg-white pt-16'
  x-data='{ loginForm: true, pwRecoverForm: false }'
  x-cloak
>
  <div class='max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-20'>
    <!-- Login Form -->
    <div x-show='loginForm'>
      <div class='mb-8 text-center md:text-left'>
        <h2 class='text-2xl font-bold text-gray-900 mb-2'>Hi there!</h2>
        <p class='text-gray-600'>
          Welcome to {{ section.settings.shop_name }} Community Dashboard
        </p>
      </div>

      {% form "customer_login" %}
        {% if form.errors %}
          <div class='mb-4 p-4 bg-red-50 border border-red-200 rounded-md'>
            <div class='flex'>
              <div class='flex-shrink-0'>
                <svg
                  class='h-5 w-5 text-red-400'
                  viewBox='0 0 20 20'
                  fill='currentColor'
                >
                  <path fill-rule='evenodd' d='M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z' clip-rule='evenodd'/>
                </svg>
              </div>
              <div class='ml-3'>
                <h3 class='text-sm font-medium text-red-800'>Error!</h3>
                <div class='mt-2 text-sm text-red-700'>
                  {{ form.errors | default_errors }}
                </div>
              </div>
            </div>
          </div>
        {% endif %}

        <div class='space-y-4'>
          <div>
            <label
              for='email_address'
              class='block text-sm font-medium text-gray-700 mb-1'
            >
              Your email
            </label>
            <input
              type='email'
              name='customer[email]'
              id='email_address'
              autocomplete='email'
              class='w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-black focus:border-black'
              placeholder='Enter your email'
              required
            >
          </div>

          {% if form.password_needed %}
            <div>
              <label
                for='password'
                class='block text-sm font-medium text-gray-700 mb-1'
              >
                Password
              </label>
              <input
                type='password'
                name='customer[password]'
                id='password'
                autocomplete='current-password'
                class='w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-black focus:border-black'
                placeholder='Enter your password'
                required
              >
            </div>
          {% endif %}

          <div class='flex justify-end'>
            <button
              type='button'
              x-on:click='loginForm = false; pwRecoverForm = true'
              class='text-sm cursor-pointer text-blue-600 hover:text-blue-500'
            >
              Forgot password?
            </button>
          </div>

          <button
            type='submit'
            class='w-full bg-black text-white py-3 px-4 rounded-md hover:bg-gray-800 transition-colors font-medium'
          >
            Log In
          </button>
        </div>
      {% endform %}

      <!-- Sign Up Link -->
      <div class='mt-6 text-center'>
        <p class='text-sm text-gray-600'>
          Don't have an account?
          <a
            href='{{ routes.account_register_url }}'
            class='text-blue-600 hover:text-blue-500 font-medium'
          >
            Sign up
          </a>
        </p>
      </div>

      <!-- Guest Checkout -->
      {% if shop.checkout.guest_login %}
        <div class='mt-8 pt-6 border-t border-gray-200'>
          <div class='text-center'>
            <h3 class='text-lg font-medium text-gray-900 mb-4'>
              Continue as a guest
            </h3>
            {% form "guest_login" %}
              <button
                type='submit'
                class='w-full border border-gray-300 text-gray-700 py-3 px-4 rounded-md hover:bg-gray-50 transition-colors font-medium'
              >
                Continue as Guest
              </button>
            {% endform %}
          </div>
        </div>
      {% endif %}
    </div>

    <!-- Password Recovery Form -->
    <div x-show='pwRecoverForm'>
      <div class='mb-8 text-center md:text-left'>
        <h2 class='text-2xl font-bold text-gray-900 mb-2'>
          Recover your password
        </h2>
        <p class='text-gray-600'>
          Enter your email address and we'll send you a link to reset your
          password.
        </p>
      </div>

      {% form "recover_customer_password" %}
        {% if form.errors %}
          <div class='mb-4 p-4 bg-red-50 border border-red-200 rounded-md'>
            <div class='flex'>
              <div class='flex-shrink-0'>
                <svg
                  class='h-5 w-5 text-red-400'
                  viewBox='0 0 20 20'
                  fill='currentColor'
                >
                  <path fill-rule='evenodd' d='M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z' clip-rule='evenodd'/>
                </svg>
              </div>
              <div class='ml-3'>
                <h3 class='text-sm font-medium text-red-800'>Error!</h3>
                <div class='mt-2 text-sm text-red-700'>
                  {{ form.errors | default_errors }}
                </div>
              </div>
            </div>
          </div>
        {% endif %}

        <div class='space-y-4'>
          <div>
            <label
              for='email'
              class='block text-sm font-medium text-gray-700 mb-1'
            >
              Email address
            </label>
            <input
              type='email'
              name='email'
              id='email'
              autocomplete='email'
              class='w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-black focus:border-black'
              placeholder='Enter your email'
              required
            >
          </div>

          <button
            type='submit'
            class='w-full bg-black text-white py-3 px-4 rounded-md hover:bg-gray-800 transition-colors font-medium'
          >
            Recover password
          </button>
        </div>
      {% endform %}

      <div class='mt-6 text-center'>
        <button
          type='button'
          x-on:click='loginForm = true; pwRecoverForm = false'
          class='text-sm text-blue-600 hover:text-blue-500'
        >
          ‚Üê Back to login
        </button>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Customer Login",
  "settings": [
    {
      "type": "text",
      "id": "shop_name",
      "label": "Shop Name",
      "default": "Kestrel Knives"
    }
  ],
  "presets": [
    {
      "name": "Customer Login",
      "settings": {
        "shop_name": "Kestrel Knives"
      }
    }
  ]
}
{% endschema %}
