      "unit": "px"
    },
    {
      "type": "range",
      "id": "logo_height_desktop",
      "label": "Logo Height (Desktop)",
      "min": 40,
      "max": 120,
      "step": 4,
      "default": 80,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Footer Settings"
    },
    {
      "type": "color",
      "id": "footer_bg_color",
      "label": "Footer Background Color",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Social Media Links"
    },
    {
      "type": "url",
      "id": "twitter_url",
      "label": "Twitter URL"
    },
    {
      "type": "url",
      "id": "youtube_url",
      "label": "YouTube URL"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email Address"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "header",
      "content": "Navigation Links"
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "Link Color",
      "default": "#ffffff"
    },
    {
      "type": "url",
      "id": "guide_url",
      "label": "Guide and Outfitter URL"
    },
    {
      "type": "url",
      "id": "privacy_url",
      "label": "Privacy Policy URL"
    },
    {
      "type": "url",
      "id": "shipping_url",
      "label": "Shipping & Returns URL"
    },
    {
      "type": "url",
      "id": "faq_url",
      "label": "FAQ URL"
    },
    {
      "type": "url",
      "id": "contact_url",
      "label": "Contact URL"
    },
    {
      "type": "header",
      "content": "Email Signup Notification"
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Social Icons Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "input_bg_color",
      "label": "Form Input Background",
      "default": "#111827"
    },
    {
      "type": "color",
      "id": "input_border_color",
      "label": "Form Input Border",
      "default": "#4b5563"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Form Button Background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Form Button Text",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "notification_title",
      "label": "Notification Title",
      "default": "Successfully signed up!"
    },
    {
