<!-- Footer Section -->
<style>
    /* Responsive footer logo sizing */
    @media (min-width: 768px) {
      .footer-logo {
        height: {{ section.settings.logo_height_desktop | default: 80 }}px !important;
      }
      .footer-logo-border {
        border-right: 1px solid white !important;
      }

      .max-w-9xl {
        max-width: 90rem;
      }
    }


  .klaviyo-form-WFPv59:focus,
  .klaviyo-form-WFPv59 input:focus,
  .klaviyo-form-WFPv59 button:focus {
    outline: none !important;
    box-shadow: none !important;
    border: 1px solid white !important;
  }

  .klaviyo-form-Viz953:focus,
  .klaviyo-form-Viz953 input:focus,
  .klaviyo-form-Viz953 button:focus {
    outline: none !important;
    box-shadow: none !important;
    border: 1px solid white !important;
  }
</style>

<footer
  class='py-4'
  style='background-color: {{ section.settings.footer_bg_color | default: "#000000" }};'
>
  <div class='mx-auto px-4 max-w-9xl'>
    <div class='grid grid-cols-1 lg:grid-cols-4 mb-4'>
      <!-- Left Column - Logo -->
      <div class='flex flex-col md:flex-row items-center mb-4 lg:mb-0 justify-center lg:col-span-1  lg:pr-8'>
        {% assign footer_logo_image = section.settings.logo_image %}
        {% if footer_logo_image == blank and shop.brand_asset_default_logo %}
          {% assign footer_logo_image = shop.brand_asset_default_logo %}
        {% endif %}
        {% if footer_logo_image != blank %}
          <a href='{{ routes.root_url }}' class='flex items-center mb-4'>
            <img
              src='{{ footer_logo_image | image_url: width: 400 }}'
              style='height: {{ section.settings.logo_height_mobile | default: 40 }}px;'
              class='footer-logo w-auto md:h-auto'
              alt='{{ shop.name }} Logo'
            >
          </a>
        {% else %}
          <a href='{{ routes.root_url }}' class='flex items-center mb-4'>
            <img
              src='{{ "logo_white.png" | asset_url }}'
              style='height: {{ section.settings.logo_height_mobile | default: 40 }}px;'
              class='footer-logo w-auto md:h-auto'
              alt='{{ shop.name }} Logo'
            >
          </a>
        {% endif %}
      </div>
      <!-- Middle Column - Newsletter Signup -->
      <div class='flex  flex-col w-full items-center justify-center lg:col-span-2'>
        <!-- Email Signup Section -->
        <div
          class='mb-6 lg:mb-0 relative flex flex-col justify-center items-center lg:space-y-4'
        >
          <!-- Klaviyo form desktop -->
          <div class='klaviyo-form-WFPv59 hidden md:block w-full'></div>

          <!-- Klaviyo form mobile -->
          <div class='klaviyo-form-Viz953 md:hidden w-full'></div>

          <!-- Navigation Links -->
          <div class='flex flex-col w-full mt-6 lg:mt-0 md:px-4 xl:whitespace-nowrap'>
            <nav class='space-y-2 flex flex-col items-center md:flex-row md:space-y-0 md:space-x-4 lg:space-x-6'>
              <a
                href='{{ section.settings.guide_url | default: "/pages/guide-outfitter" }}'
                class='block text-sm hover:opacity-80 transition-colors duration-200 font-medium uppercase tracking-wide'
                style='color: {{ section.settings.link_color | default: "#ffffff" }};'
              >
                GUIDE AND OUTFITTER
              </a>
              <div class='hidden md:block w-px h-full bg-white'></div>
              <a
                href='{{ section.settings.shipping_url | default: "/pages/shipping-returns" }}'
                class='block text-sm hover:opacity-80 transition-colors duration-200 font-medium uppercase tracking-wide'
                style='color: {{ section.settings.link_color | default: "#ffffff" }};'
              >
                SHIPPING & RETURNS
              </a>
              <div class='hidden md:block w-px h-full bg-white'></div>
              <a
                href='{{ section.settings.privacy_url | default: "/pages/privacy-policy" }}'
                class='block text-sm hover:opacity-80 transition-colors duration-200 font-medium uppercase tracking-wide'
                style='color: {{ section.settings.link_color | default: "#ffffff" }};'
              >
                PRIVACY POLICY
              </a>
              <div class='hidden md:block w-px h-full bg-white'></div>
              <a
                href='{{ section.settings.faq_url | default: "/pages/faq" }}'
                class='block text-sm hover:opacity-80 transition-colors duration-200 font-medium uppercase tracking-wide'
                style='color: {{ section.settings.link_color | default: "#ffffff" }};'
              >
                FAQ
              </a>
              <div class='hidden md:block w-px h-full bg-white'></div>
              <a
                href='{{ section.settings.contact_url | default: "/pages/contact" }}'
                class='block text-sm hover:opacity-80 transition-colors duration-200 font-medium uppercase tracking-wide'
                style='color: {{ section.settings.link_color | default: "#ffffff" }};'
              >
                CONTACT
              </a>
            </nav>
          </div>
        </div>
      </div>

      <!-- American Flag Column -->
      <div class='lg:col-span-1 w-full space-y-4 flex flex-col items-center justify-center lg:items-end'>
        <div class='flex flex-col items-center justify-center w-max'>
          <div class='w-28 h-auto mb-1'>
            <img
              src='{{ "american_flag.png" | asset_url }}'
              class='w-full h-full object-contain'
              alt='american flag'
            >
          </div>
          <div class='w-full h-full'>
            <p class='text-center text-white tracking-wide text-sm md:text-base'>
              100% Made in the USA
            </p>
          </div>
        </div>

        <!-- Social Media Icons -->
        <div class='flex justify-center md:justify-end items-center gap-6 mb-12 md:mb-0 md:order-2'>
          <!-- Twitter -->
          <a
            target='_blank'
            href='{{ section.settings.twitter_url | default: "#" }}'
            class='hover:opacity-80 transition-colors duration-200'
            style='color: {{ section.settings.icon_color | default: "#ffffff" }};'
          >
            <svg class='w-6 h-6' fill='currentColor' viewBox='0 0 24 24'>
              <path d='M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z'/>
            </svg>
          </a>

          <!-- YouTube -->
          <a
            target='_blank'
            href='{{ section.settings.youtube_url | default: "#" }}'
            class='hover:opacity-80 transition-colors duration-200'
            style='color: {{ section.settings.icon_color | default: "#ffffff" }};'
          >
            <svg class='w-6 h-6' fill='currentColor' viewBox='0 0 24 24'>
              <path d='M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z'/>
            </svg>
          </a>

          <!-- Facebook -->
          <a
            target='_blank'
            href='{{ section.settings.facebook_url | default: "#" }}'
            class='hover:opacity-80 transition-colors duration-200'
            style='color: {{ section.settings.icon_color | default: "#ffffff" }};'
          >
            <svg class='w-6 h-6' fill='currentColor' viewBox='0 0 24 24'>
              <path d='M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z'/>
            </svg>
          </a>

          <!-- Email -->
          <a
            target='_blank'
            href='{{ section.settings.email | default: "mailto:sales@kestrelknives.com" }}'
            class='hover:opacity-80 transition-colors duration-200'
            style='color: {{ section.settings.icon_color | default: "#ffffff" }};'
          >
            <svg class='w-6 h-6' fill='currentColor' viewBox='0 0 24 24'>
              <path d='M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z'/>
            </svg>
          </a>

          <!-- Instagram -->
          <a
            target='_blank'
            href='{{ section.settings.instagram_url | default: "#" }}'
            class='hover:opacity-80 transition-colors duration-200'
            style='color: {{ section.settings.icon_color | default: "#ffffff" }};'
          >
            <svg class='w-6 h-6' fill='currentColor' viewBox='0 0 24 24'>
              <path d='M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z'/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
  <div class='flex items-center justify-center gap-2 uppercase'>
    <div>
      <p class='text-center text-white tracking-wide text-sm'>
        &copy; {{ "now" | date: "%Y" }} Kestrel Knives
      </p>
    </div>
    <div class='w-px h-6 bg-white'></div>
    <div>
      <p class='text-center text-white tracking-wide text-sm'>
        All rights reserved.
      </p>
    </div>
  </div>
</footer>

