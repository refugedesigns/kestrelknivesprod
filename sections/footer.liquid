<!-- Footer Section -->
<footer class='bg-black py-16'>
  <div class='max-w-6xl mx-auto px-4'>
    <!-- Email Signup Section -->
    <div class='text-center mb-12 relative' x-data='footerSignupForm()'>
      <h2 class='text-lg text-white mb-6'>
        Join our email list to learn more about our next chapter.
      </h2>

      <!-- Email Signup Form -->
      <form @submit.prevent='submit' novalidate>
        <div class='flex flex-col md:flex-row justify-center items-center gap-4 w-full md:max-w-md mx-auto'>
          <input
            type='email'
            x-model='email'
            name='contact[email]'
            placeholder='Email Address'
            class='w-full md:flex-1 px-4 py-3 border border-gray-600 bg-gray-900 text-white placeholder-gray-400 rounded-none focus:outline-none focus:border-white'
            required
          >
          <input type='hidden' name='contact[tags]' value='newsletter'>
          <button
            type='submit'
            :disabled='submitting'
            class='w-full md:w-auto px-8 py-3 border-2 border-white text-white font-semibold uppercase tracking-wide hover:bg-white hover:text-black transition-colors duration-200 disabled:opacity-50 disabled:cursor-not-allowed'
          >
            <span x-text="submitting ? 'Signing Up...' : 'Sign Up'"></span>
          </button>
        </div>

        <!-- Error Message -->
        <div
          x-show='errorMessage'
          class='mt-4 text-sm text-red-400 text-center'
          x-text='errorMessage'
        ></div>
      </form>

      <!-- Success Popup -->
      <div
        x-show='showSuccess'
        x-transition:enter='transition ease-out duration-300'
        x-transition:enter-start='opacity-0 scale-95'
        x-transition:enter-end='opacity-100 scale-100'
        x-transition:leave='transition ease-in duration-200'
        x-transition:leave-start='opacity-100 scale-100'
        x-transition:leave-end='opacity-0 scale-95'
        class='absolute top-0 left-1/2 transform -translate-x-1/2 -translate-y-full z-10 bg-white rounded-lg p-6 max-w-md mx-4 shadow-lg border'
        style='display: none;'
      >
        <!-- Close Button -->
        <button
          @click='closeSuccess'
          class='absolute top-2 right-2 text-gray-400 hover:text-gray-600'
        >
          <svg
            class='w-5 h-5'
            fill='none'
            stroke='currentColor'
            viewBox='0 0 24 24'
          >
            <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M6 18L18 6M6 6l12 12'/>
          </svg>
        </button>

        <!-- Popup Content -->
        <div class='text-center'>
          <h3 class='text-sm font-semibold text-black mb-1 uppercase'>
            {{
              section.settings.notification_title
              | default: "Sign up to get notifications for our"
            }}
          </h3>
          <h2 class='text-lg font-bold text-black mb-4 uppercase'>
            {{
              section.settings.notification_subtitle
              | default: "Next Blade Drop:"
            }}
          </h2>
          <div class='{{ section.settings.notification_button_color | default: "bg-orange-500" }} text-white py-3 px-4 rounded-lg'>
            <p class='font-semibold text-sm'>
              {{
                section.settings.notification_success_message
                | default: "Thanks for signing up!"
              }}
            </p>
          </div>
        </div>
      </div>
    </div>

